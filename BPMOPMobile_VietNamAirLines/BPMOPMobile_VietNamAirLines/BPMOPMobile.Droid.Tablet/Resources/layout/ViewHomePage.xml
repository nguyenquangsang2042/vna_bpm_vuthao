<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:weightSum="10">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clViolet"
        android:id="@+id/ln_ViewHomePage_Toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/relativeLayout1">
            <refractored.controls.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_ViewHomePage_Avata"
                android:backgroundTint="#00000000"
                android:tint="#00000000"
                android:src="@mipmap/icon_avatar64"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                app:civ_border_overlay="false"
                android:padding="5dp"
                app:civ_border_color="@android:color/background_light"
                app:civ_border_width="1px"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ln_HomePage_Search"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_ViewHomePage_Avata"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center">
                <ImageView
                    android:src="@drawable/icon_tab_search"
                    android:tint="@color/clWhite"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:padding="2dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/img_HomePage_Search" />
                <EditText
                    android:hint="Tìm kiếm ..."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text16"
                    android:textAlignment="textStart"
                    android:layout_centerVertical="true"
                    android:textColor="@color/clWhite"
                    android:textColorHint="@color/clWhite"
                    android:id="@+id/edt_ViewHomePage_Search"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
            <ImageView
                android:src="@drawable/icon_tab_bell"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewHomePage_Toolbar_Notification"
                android:layout_centerVertical="true"
                android:padding="7dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:tint="@color/clWhite"
                android:layout_weight="1"/>
            <TextView
                android:text="99"
                android:background="@drawable/textcirclered"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/img_ViewHomePage_Toolbar_Notification"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/clWhite"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="-40dp"
                android:textSize="@dimen/text10"
                android:id="@+id/tv_ViewHomePage_Toolbar_Notification" />
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ln_ViewHomePage_Toolbar_Create"
                android:background="@drawable/textcornerwhite2"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_ViewHomePage_Toolbar_Notification"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center">
                <ImageView
                    android:src="@drawable/icon_tab_add"
                    android:tint="@color/clViolet"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/img_ViewHomePage_Toolbar_Create" />
                <TextView
                    android:text="Tạo mới"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text14"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:textColor="@color/clViolet"
                    android:id="@+id/tv_ViewHomePage_Toolbar_Create" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_ViewHomePage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/clMainLightBlue"
            android:weightSum="10">

            <android.support.v7.widget.CardView
                android:minWidth="25px"
                android:minHeight="25px"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_height="match_parent"
                android:id="@+id/card_ViewHomePage_Content_left">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:weightSum="2">
                        <TextView
                            android:text="Đến tôi (0)"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/tv_ViewHomePage_VDT"
                            android:background="@drawable/texthomeselected"
                            android:textColor="@color/clViolet"
                            android:textSize="@dimen/text16"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:text="Tôi bắt đầu (0)"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/tv_ViewHomePage_VTBD"
                            android:textColor="@color/clGraytitle"
                            android:textSize="@dimen/text16"
                            android:background="@drawable/texthomeunselected"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:id="@+id/view1"
                        android:background="@color/clGrayNavigator"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ln_ViewHomePage_VDT"
                        android:visibility="visible">
                        <ListView
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="true"
                            android:id="@+id/lv_ViewHomePage_VDT"
                            android:visibility="gone"/>
                        <LinearLayout
                            android:id="@+id/ln_ViewHomePage_VDT_NoData"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:visibility="visible"
                            android:layout_weight="10">
                            <ImageView
                                android:src="@mipmap/icon_list_empty"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:id="@+id/imageView1"
                                android:tint="@color/clHint" />
                            <TextView
                                android:text="Không có dữ liệu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_ViewHomePage_VDT_NoData"
                                android:fontFamily="@string/text_light"
                                android:textColor="@color/clTextSmall"
                                android:gravity="center"
                                android:textSize="@dimen/text14"
                                android:padding="10dp" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ln_ViewHomePage_VTBD"
                        android:visibility="gone">
                        <ListView
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="true"
                            android:id="@+id/lv_ViewHomePage_VTBD"
                            android:visibility="gone"/>
                        <LinearLayout
                            android:id="@+id/ln_ViewHomePage_VTBD_NoData"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:layout_weight="10">
                            <ImageView
                                android:src="@mipmap/icon_list_empty"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:id="@+id/imageView1"
                                android:tint="@color/clHint" />
                            <TextView
                                android:text="Không có dữ liệu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_ViewHomePage_VTBD_NoData"
                                android:fontFamily="@string/text_light"
                                android:textColor="@color/clTextSmall"
                                android:gravity="center"
                                android:textSize="@dimen/text14"
                                android:padding="10dp" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:minWidth="25px"
                android:minHeight="25px"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                android:layout_width="0dp"
                android:layout_weight="6.5"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent"
                android:id="@+id/card_ViewHomePage_Content_right">

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/view1"
        android:background="@color/clGrayNavigator2"/>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/linearLayout4"
        android:weightSum="4"
        android:background="@color/clGrayNavigator">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ln_ViewHomePage_Bottom_Home">
            <ImageView
                android:src="@drawable/icon_tab_home"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/img_ViewHomePage_Bottom_Home"
                android:padding="3dp"
                android:tint="@color/clBottomEnable"
                android:layout_weight="1"/>
            <TextView
                android:text="Trang chủ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/clBottomEnable"
                android:id="@+id/tv_ViewHomePage_Bottom_Home"
                android:textSize="@dimen/text12"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ln_ViewHomePage_Bottom_VDT">
            <ImageView
                android:src="@drawable/icon_tab_vdt"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/img_ViewHomePage_Bottom_VDT"
                android:padding="6dp"
                android:tint="@color/clBottomDisable"
                android:layout_weight="1"/>
            <TextView
                android:text="Đến tôi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/clBottomDisable"
                android:id="@+id/tv_ViewHomePage_Bottom_VDT"
                android:textSize="@dimen/text12"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ln_ViewHomePage_Bottom_VTBD">
            <ImageView
                android:src="@drawable/icon_tab_vtbd"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/img_ViewHomePage_Bottom_VTBD"
                android:padding="10dp"
                android:tint="@color/clBottomDisable"
                android:layout_weight="1"/>
            <TextView
                android:text="Tôi bắt đầu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/clBottomDisable"
                android:id="@+id/tv_ViewHomePage_Bottom_VTBD"
                android:textSize="@dimen/text12"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ln_ViewHomePage_Bottom_Board">
            <ImageView
                android:src="@drawable/icon_tab_board"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/img_ViewHomePage_Bottom_Board"
                android:padding="10dp"
                android:tint="@color/clBottomDisable"
                android:layout_weight="1"/>
            <TextView
                android:text="Board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/clBottomDisable"
                android:id="@+id/tv_ViewHomePage_Bottom_Board"
                android:textSize="@dimen/text12"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
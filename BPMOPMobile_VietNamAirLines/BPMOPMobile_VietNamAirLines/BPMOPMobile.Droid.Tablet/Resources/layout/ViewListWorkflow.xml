<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:weightSum="10">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clViolet"
        android:id="@+id/ln_ViewListWorkflow_Toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/rela_ViewListWorkflow_Toolbar">
            <refractored.controls.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_ViewListWorkflow_Avata"
                android:backgroundTint="#00000000"
                android:tint="#00000000"
                android:src="@mipmap/icon_avatar64"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                app:civ_border_overlay="false"
                android:padding="5dp"
                app:civ_border_color="@android:color/background_light"
                app:civ_border_width="1px"/>
            <TextView
                android:text="Trang chủ"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/img_ViewListWorkflow_Avata"
                android:textSize="@dimen/text14"
                android:gravity="center"
                android:textColor="@color/clWhite"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_ViewListWorkflow_Title" />
            <ImageView
                android:src="@drawable/icon_tab_arrow"
                android:layout_toRightOf="@+id/tv_ViewListWorkflow_Title"
                android:tint="@color/clWhite"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:id="@+id/img_ViewListWorkflow_Title" />
            <TextView
                android:text="Đến tôi (99)"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/img_ViewListWorkflow_Title"
                android:textSize="@dimen/text14"
                android:gravity="center"
                android:textColor="@color/clWhite"
                android:id="@+id/tv_ViewListWorkflow_Title2" />


            <ImageView
                android:src="@drawable/icon_tab_bell"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewListWorkflow_Toolbar_Notification"
                android:layout_centerVertical="true"
                android:padding="7dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:tint="@color/clWhite"
                android:layout_weight="1"/>
            <TextView
                android:text="99"
                android:background="@drawable/textcirclered"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/img_ViewListWorkflow_Toolbar_Notification"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/clWhite"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="-40dp"
                android:textSize="@dimen/text10"
                android:id="@+id/tv_ViewListWorkflow_Toolbar_Notification" />
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ln_ViewListWorkflow_Toolbar_Create"
                android:background="@drawable/textcornerwhite2"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_ViewListWorkflow_Toolbar_Notification"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center">
                <ImageView
                    android:src="@drawable/icon_tab_add"
                    android:tint="@color/clViolet"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/img_ViewListWorkflow_Toolbar_Create" />
                <TextView
                    android:text="Tạo mới"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text14"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:textColor="@color/clViolet"
                    android:id="@+id/tv_ViewListWorkflow_Toolbar_Create" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_ViewListWorkflow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/clMainLightBlue"
            android:weightSum="10">
            <android.support.v7.widget.CardView
                android:minWidth="25px"
                android:minHeight="25px"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2.5dp"
                android:layout_height="match_parent"
                android:id="@+id/card_ViewListWorkflow_Content_left">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:padding="8dp"
                        android:id="@+id/linearLayout1">
                        <RelativeLayout
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/relativeLayout2">
                            <ImageView
                                android:src="@drawable/icon_tab_filter"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:id="@+id/img_ViewListWorkflow_Filter"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:tint="@color/clBlack"
                                android:padding="8dp" />
                            <ImageView
                                android:src="@drawable/icon_delete"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:id="@+id/img_ViewListWorkflow_Search_Delete"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/img_ViewListWorkflow_Filter"
                                android:tint="@color/clBlack"
                                android:layout_marginRight="3dp"
                                android:padding="8dp" />
                            <ImageView
                                android:src="@drawable/icon_tab_search"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:id="@+id/img_ViewListWorkflow_Search"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:tint="@color/clBlack"
                                android:padding="9dp" />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/edt_ViewListWorkflow_Search"
                                android:layout_toLeftOf="@+id/img_ViewListWorkflow_Search_Delete"
                                android:layout_toRightOf="@+id/img_ViewListWorkflow_Search"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/text14"
                                android:lines="1"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:inputType="text"
                                android:textColor="@android:color/background_dark"
                                android:hint="Tìm kiếm..."
                                android:textColorHint="@color/clHint"
                                android:background="@android:color/transparent" />
                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:id="@+id/view1"
                        android:background="@color/clGrayNavigator"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ln_ViewListWorkflow_Data"
                        android:visibility="visible">
                        <ListView
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="true"
                            android:divider="@null"
                            android:id="@+id/lv_ViewListWorkflow_Data"
                            android:visibility="gone"/>
                        <LinearLayout
                            android:id="@+id/ln_ViewListWorkflow_NoData"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:visibility="visible"
                            android:layout_weight="10">
                            <ImageView
                                android:src="@mipmap/icon_list_empty"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:id="@+id/imageView1"
                                android:tint="@color/clHint" />
                            <TextView
                                android:text="Không có dữ liệu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_ViewListWorkflow_NoData"
                                android:fontFamily="@string/text_light"
                                android:textColor="@color/clTextSmall"
                                android:gravity="center"
                                android:textSize="@dimen/text14"
                                android:padding="10dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:minWidth="25px"
                android:minHeight="25px"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                android:layout_width="0dp"
                android:layout_weight="6.5"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent"
                android:id="@+id/card_ViewListWorkflow_Content_right">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/clWhite"
                        android:id="@+id/ln_ViewListWorkflow_Detail_Process"
                        android:visibility="gone">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="45dp">
                            <ImageView
                                android:src="@drawable/icon_tab_back"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:tint="@color/clViolet"
                                android:padding="15dp"
                                android:id="@+id/img_ViewListWorkflow_Detail_Process_Back" />
                            <TextView
                                android:text="Text Đăng ký công tác"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/clViolet"
                                android:textSize="@dimen/text14"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/tv_ViewListWorkflow_Detail_Process_WorkflowTitle"/>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:id="@+id/view1"
                            android:background="@color/clGrayNavigator2"/>
                        <ExpandableListView
                            android:paddingTop="5dp"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:nestedScrollingEnabled="true"
                            android:groupIndicator="@null"
                            android:childIndicator="@null"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/expand_ViewListWorkflow_Detail_Process"
                            android:scrollbarSize="1px" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/clWhite"
                        android:id="@+id/ln_ViewListWorkflow_Detail_Content">
                        <RelativeLayout
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="45dp">
                            <TextView
                                android:text="Text Đăng ký công tác"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clViolet"
                                android:textSize="@dimen/text14"
                                android:textStyle="bold"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@+id/recy_ViewListWorkflow_Action"
                                android:id="@+id/tv_ViewListWorkflow_Detail_WorkflowTitle"/>
                            <android.support.v7.widget.RecyclerView
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:id="@+id/recy_ViewListWorkflow_Detail_Action"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:id="@+id/view1"
                            android:background="@color/clGrayNavigator2"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:padding="3dp"
                            android:alpha="1"
                            android:weightSum="10">

                            <RelativeLayout
                                android:orientation="vertical"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:id="@+id/ln_ViewListWorkflow_Avatar">
                                <TextView
                                    android:text="TP"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:textColor="@color/clWhite"
                                    android:textSize="@dimen/text16"
                                    android:layout_margin="2dp"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:background="@drawable/textcircleviolet"
                                    android:id="@+id/tv_ViewListWorkflow_Detail_Avatar" />
                            </RelativeLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="10"
                                android:weightSum="10">

                                <TextView
                                    android:text="Text Hoang Dang Khoa - Phong CNTT"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/clBlack"
                                    android:textSize="@dimen/text14"
                                    android:textStyle="bold"
                                    android:gravity="left"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:id="@+id/tv_ViewListWorkflow_Detail_CreatedName"/>
                                <TextView
                                    android:text="Den: ban, +5 nguoi khac"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/clGraytitle"
                                    android:textSize="@dimen/text12"
                                    android:gravity="bottom"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:id="@+id/tv_ViewListWorkflow_Detail_ToName"/>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center">
                                <ImageView
                                    android:src="@drawable/icon_tab_star"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="5dp"
                                    android:padding="3dp"
                                    android:id="@+id/img_ViewListWorkflow_Detail_Favorite" />
                                <ImageView
                                    android:src="@drawable/icon_tab_star"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="5dp"
                                    android:padding="3dp"
                                    android:id="@+id/img_ViewListWorkflow_Detail_Share" />
                                <ImageView
                                    android:src="@drawable/icon_tab_process"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:padding="5dp"
                                    android:id="@+id/img_ViewListWorkflow_Detail_Process" />
                            </LinearLayout>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/clGrayNavigator2"/>
                        <TextView
                            android:text="Text Đăng ký công tác"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:textColor="@color/clViolet"
                            android:textSize="@dimen/text18"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_toLeftOf="@+id/recy_ViewListWorkflow_Action"
                            android:id="@+id/tv_ViewListWorkflow_Detail_WorkflowTitle2"/>
                        <ExpandableListView
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:nestedScrollingEnabled="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/expand_ViewListWorkflow_Detail_Data" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/view1"
        android:background="@color/clGrayNavigator2"/>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/linearLayout4"
        android:weightSum="4"
        android:background="@color/clGrayNavigator">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ln_ViewListWorkflow_Bottom_Home">
            <ImageView
                android:src="@drawable/icon_tab_home"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/img_ViewListWorkflow_Bottom_Home"
                android:padding="10dp"
                android:tint="@color/clBottomDisable"
                android:layout_weight="1"/>
            <TextView
                android:text="Trang chủ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/clBottomDisable"
                android:id="@+id/tv_ViewListWorkflow_Bottom_Home"
                android:textSize="@dimen/text12"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ln_ViewListWorkflow_Bottom_VDT">
            <ImageView
                android:src="@drawable/icon_tab_vdt"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/img_ViewListWorkflow_Bottom_VDT"
                android:padding="6dp"
                android:tint="@color/clBottomEnable"
                android:layout_weight="1"/>
            <TextView
                android:text="Đến tôi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/clBottomEnable"
                android:id="@+id/tv_ViewListWorkflow_Bottom_VDT"
                android:textSize="@dimen/text12"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ln_ViewListWorkflow_Bottom_VTBD">
            <ImageView
                android:src="@drawable/icon_tab_vtbd"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/img_ViewListWorkflow_Bottom_VTBD"
                android:tint="@color/clBottomDisable"
                android:layout_weight="1"/>
            <TextView
                android:text="Tôi bắt đầu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/clBottomEnable"
                android:id="@+id/tv_ViewListWorkflow_Bottom_VTBD"
                android:textSize="@dimen/text12"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ln_ViewListWorkflow_Bottom_Board">
            <ImageView
                android:src="@drawable/icon_tab_board"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/img_ViewListWorkflow_Bottom_Board"
                android:padding="10dp"
                android:tint="@color/clBottomDisable"
                android:layout_weight="1"/>
            <TextView
                android:text="Board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/clBottomDisable"
                android:id="@+id/tv_ViewListWorkflow_Bottom_Board"
                android:textSize="@dimen/text12"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
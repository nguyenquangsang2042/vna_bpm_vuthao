
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/clWhite">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10">
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout5"
            android:layout_weight="3.5"
            android:background="@color/clViolet">
            
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_ViewStartView_Login"
                android:layout_margin="25dp"
                android:layout_centerInParent="true"
                android:visibility="visible">
                <TextView
                    android:text="ĐĂNG NHẬP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ViewStartView_Status"
                    android:fontFamily="@font/robotoregular"
                    android:textSize="@dimen/text20"
                    android:textColor="@color/clWhite"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:visibility="visible"/>
                <TextView
                    android:text="Tên tài khoản"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ViewStartView_Name"
                    android:fontFamily="@font/robotoregular"
                    android:textSize="@dimen/text16"
                    android:textColor="@color/clWhite"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ln_ViewStartView_Name"
                    android:background="@drawable/textcornerwhite2"
                    android:foregroundGravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:gravity="center">
                    <ImageView
                        android:src="@drawable/icon_tab_user"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"/>
                    <EditText
                        android:id="@+id/edt_ViewStartView_Username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:hint="Tên truy cập"
                        android:textColorHint="@color/clGraytitle"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="@dimen/text16"
                        android:inputType="text"
                        android:tag="K_Uname" />
                </LinearLayout>
                <TextView
                    android:text="Mật khẩu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ViewStartView_Pass"
                    android:fontFamily="@font/robotoregular"
                    android:textSize="@dimen/text16"
                    android:textColor="@color/clWhite"
                    android:gravity="left"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ln_ViewStartView_Pass"
                    android:background="@drawable/textcornerwhite2"
                    android:foregroundGravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:gravity="center">
                    <ImageView
                        android:src="@drawable/icon_tab_key"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"/>
                    <EditText
                        android:id="@+id/edt_ViewStartView_Pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:hint="Mật khẩu"
                        android:textColorHint="@color/clGraytitle"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="@dimen/text16"
                        android:inputType="text"
                        android:tag="K_Pass"
                        android:password="true"/>
                </LinearLayout>
                <RelativeLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:src="@drawable/icon_tab_check"
                        android:id="@+id/img_ViewStartView_RememberPass"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="5dp"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:text="Mật khẩu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_ViewStartView_RememberPass"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="@dimen/text16"
                        android:textColor="@color/clWhite"
                        android:gravity="left"
                        android:layout_toRightOf="@+id/img_ViewStartView_RememberPass"/>
                    <TextView
                        android:text="Quên mật khẩu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_ViewStartView_ForgotPass"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="@dimen/text16"
                        android:textColor="@color/clWhite"
                        android:gravity="left"
                        android:visibility="visible"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <TextView
                    android:text="Đăng nhập"
                    android:id="@+id/tv_ViewStartView_Login"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/textcornerviolet3"
                    android:textSize="@dimen/text18"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@android:color/background_light"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:layout_gravity="center"
                    android:tag="K_Login" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout4"
                android:padding="5dp"
                android:layout_below="@+id/ln_ViewStartView_Login"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Kiểm tra lại thông tin đang nhập"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ViewStartView_Note"
                    android:textSize="@dimen/text18"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@color/clRed"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content" />
                <ProgressBar
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:id="@+id/progess_ViewStartView"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/clRed" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5">
            <ImageView
                android:src="@drawable/img_startview_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_ViewStartView_Banner" />
            <ImageView
                android:src="@drawable/img_startview_topleft"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <ImageView
                android:src="@drawable/img_startview_topright"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:src="@drawable/img_startview_bottomright"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:src="@drawable/img_startview_bottomleft"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
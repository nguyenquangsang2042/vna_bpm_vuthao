
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/clWhite">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/linearLayout_top"
        android:weightSum="10"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:gravity="center">
        <refractored.controls.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/img_ViewLeftMenu_Avata"
            android:backgroundTint="#00000000"
            android:tint="#00000000"
            android:padding="3dp"
            android:src="@mipmap/icon_avatar64"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"/>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left">

            <TextView
                android:text="Hoàng Đăng Khoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ViewLeftMenu_Name"
                android:textColor="@color/clBlack"
                android:textSize="@dimen/text16"
                android:gravity="center_vertical"
                android:fontFamily="@font/robotoregular"
                android:lines="1"
                android:maxLines="1"/>
            <TextView
                android:text="khoahd@vuthao.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ViewLeftMenu_Email"
                android:textColor="@color/clGraytitle"
                android:textSize="@dimen/text12"
                android:fontFamily="@font/robotolight"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:lines="1"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/clGray"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:weightSum="6"
        android:paddingLeft="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/linearLayout5">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_LeftMain_HomePage"
                android:background="@color/clViolet"/>
            <ImageView
                android:src="@drawable/icon_tab_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_LeftMain_HomePage"
                android:layout_gravity="center_vertical"
                android:padding="10dp"/>
            <TextView
                android:text="Trang chủ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_LeftMain_HomePage"
                android:gravity="center_vertical"
                android:textColor="@color/clViolet"
                android:textSize="@dimen/text14"
                android:fontFamily="@font/robotolight"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:tag="K_Home" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="1">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_LeftMain_VDT"
                android:background="@color/clWhite"/>
            <ImageView
                android:src="@drawable/icon_tab_vdt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_LeftMain_VDT"
                android:layout_gravity="center_vertical"
                android:padding="8dp" />
            <TextView
                android:text="Đến tôi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_LeftMain_VDT"
                android:gravity="center_vertical"
                android:textColor="@color/clBlack"
                android:textSize="@dimen/text14"
                android:fontFamily="@font/robotolight"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:tag="K_Request" />
            <TextView
                android:id="@+id/tv_LeftMain_VDTCount"
                android:text="20"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="@color/clRed"
                android:textSize="@dimen/text14"
                android:fontFamily="@font/robotoregular"
                android:textStyle="bold"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="1">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_LeftMain_VTBD"
                android:background="@color/clWhite"/>
            <ImageView
                android:src="@drawable/icon_tab_vtbd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_LeftMain_VTBD"
                android:layout_gravity="center_vertical"
                android:padding="10dp" />
            <TextView
                android:text="Tôi bắt đầu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_LeftMain_VTBD"
                android:gravity="center_vertical"
                android:textColor="@color/clBlack"
                android:textSize="@dimen/text14"
                android:fontFamily="@font/robotolight"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:tag="K_Approve" />
            <TextView
                android:id="@+id/tv_LeftMain_VTBDCount"
                android:text="20"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="@color/clRed"
                android:textSize="@dimen/text14"
                android:fontFamily="@font/robotoregular"
                android:textStyle="bold"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="1"
            android:visibility="gone">
            <ImageView
                android:src="@mipmap/icon_yeucauxuly"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_LeftMain_YCXL"
                android:layout_gravity="center_vertical"
                android:padding="5dp" />
            <TextView
                android:text="Yêu cầu xử lý"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_LeftMain_YCXL"
                android:gravity="center_vertical"
                android:textColor="@color/clBlack"
                android:textSize="@dimen/text14"
                android:fontFamily="@font/robotolight"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:tag="K_Todo" />
            <TextView
                android:id="@+id/tv_LeftMain_YCXLCount"
                android:text="20"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="@color/clWhite"
                android:textSize="@dimen/text14"
                android:fontFamily="@font/robotoregular"
                android:textStyle="bold"
                android:background="@drawable/textcircleviolet"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="1">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_LeftMain_AppInfo"
                android:background="@color/clWhite"/>
            <ImageView
                android:src="@drawable/icon_tab_info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_LeftMain_InforApp"
                android:layout_gravity="center_vertical"
                android:padding="10dp" />

            <TextView
                android:id="@+id/tv_LeftMain_InfoApp"
                android:text="Thông tin ứng dụng"
                android:layout_width="231.0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/clBlack"
                android:textSize="@dimen/text14"
                android:fontFamily="@font/robotolight"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:tag="K_About" />
            <TextView
                android:text="v.1.0.0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_LeftMain_InforApp"
                android:gravity="center_vertical"
                android:textColor="@color/clViolet"
                android:textSize="@dimen/text14"
                android:textStyle="bold"
                android:fontFamily="@font/robotolight"
                android:layout_marginRight="10dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="1">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_LeftMain_Language"
                android:background="@color/clWhite"/>
            <ImageView
                android:src="@drawable/icon_tab_language"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_LeftMain_Language"
                android:layout_gravity="center_vertical"
                android:padding="10dp" />
            <TextView
                android:text="Tiếng Việt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/tv_LeftMain_Language"
                android:textColor="@color/clBlack"
                android:textSize="@dimen/text14"
                android:fontFamily="@font/robotolight"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:tag="K_Language" />
            <Switch
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@+id/sw_LeftMain_Language"
                android:checked="false"
                android:textOff="VN"
                android:textOn="EN"
                android:showText="true"
                android:thumb="@mipmap/customswitchselector"
                android:track="@mipmap/custom_track"
                android:layout_height="wrap_content"
                android:fontFamily="@string/text_light"
                android:layout_gravity="center_vertical"
                android:switchTextAppearance="@style/SwitchTextAppearance" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_LeftMain_Logout"
                android:background="@color/clWhite"/>
            <ImageView
                android:src="@drawable/icon_tab_logout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_LeftMain_SignOut"
                android:layout_gravity="center_vertical"
                android:padding="10dp" />
            <TextView
                android:text="Đăng xuất"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_LeftMain_SignOut"
                android:gravity="center_vertical"
                android:textColor="@color/clRed"
                android:textSize="@dimen/text14"
                android:fontFamily="@font/robotolight"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:tag="K_Logout" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <ImageView
            android:src="@drawable/img_intrologin_small"
            android:padding="25dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>
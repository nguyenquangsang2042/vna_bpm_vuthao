
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ln_ItemHomePageToDoList_All">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_ItemHomePageToDoList_Category"
            android:alpha="1"
            android:layout_margin="3dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/view_ItemHomePageToDoList_Category"
                android:background="@color/clGrayNavigator2"/>
            <TextView
                android:text="Hôm qua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/clGraytitle"
                android:textSize="@dimen/text18"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_ItemHomePageToDoList_Category"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_ItemHomePageToDoList_Content">
               <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_ItemHomePageToDoList_LeftSelected"
                android:background="@color/clBottomEnable"/>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="3dp"
                android:alpha="1">

                <RelativeLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/ln_ItemHomePageToDoList_Avatar">
                    <TextView
                        android:text="TP"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:textColor="@color/clWhite"
                        android:textSize="@dimen/text16"
                        android:layout_margin="2dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:background="@drawable/textcircleviolet"
                        android:id="@+id/tv_ItemHomePageToDoList_Avatar" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:weightSum="10">

                    <TextView
                        android:text="Text Đăng ký công tác tại Thành Phố Hồ Chí Minh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/clBlack"
                        android:textSize="@dimen/text14"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/tv_ItemHomePageToDoList_Title"/>
                    <TextView
                        android:text="19/02/03"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/clGraytitle"
                        android:textSize="@dimen/text12"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:id="@+id/tv_ItemHomePageToDoList_Time"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">


                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:gravity="center_vertical">
                    <TextView
                        android:text="Text quy trình đề xuất tạm ứng chi phí tổ chức sự kiện"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/clViolet"
                        android:textSize="@dimen/text14"
                        android:gravity="left"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_weight="10"
                        android:id="@+id/tv_ItemHomePageToDoList_Description"/>
                    <ImageView
                        android:src="@drawable/icon_tab_flag"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="3dp"
                        android:tint="@color/clRed"
                        android:id="@+id/img_ItemHomePageToDoList_Flag"/>
                    <ImageView
                        android:src="@drawable/icon_attach"
                        android:padding="4dp"
                        android:rotation="-45"
                        android:tint="@color/clGraytitle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/img_ItemHomePageToDoList_AttachFile" />
                </LinearLayout>

                <TextView
                    android:text="Text 8:00, 18/03/1997"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clGraytitle"
                    android:layout_alignParentRight="true"
                    android:textAlignment="textEnd"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text14"
                    android:gravity="right"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/tv_ItemHomePageToDoList_StatusTime"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:id="@+id/view1"
                android:background="@color/clGrayNavigator"/>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
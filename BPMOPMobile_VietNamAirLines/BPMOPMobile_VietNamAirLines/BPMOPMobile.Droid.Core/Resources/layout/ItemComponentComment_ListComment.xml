<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/clWhite"
    android:minWidth="25px"
    android:minHeight="25px"
    android:id="@+id/ln_ItemComponentComment_ListComment_All">

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <View
            android:minHeight="0px"
            android:minWidth="0px"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/vw_ItemComponentComment_ListComment_MarginLeft" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_ItemComponentComment_ListComment_ContentClick">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:id="@+id/ln_ItemComponentComment_ListComment_ItemComment">

                <RelativeLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:id="@+id/rela_ItemChildExpandListFlow_Avatar">

                    <refractored.controls.CircleImageView
                        android:layout_centerHorizontal="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/img_ItemComponentComment_ListComment_Avata"
                        android:backgroundTint="#00000000"
                        android:tint="#00000000"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#ffffffff"
                        android:src="@drawable/icon_avatar64"/>
                    <TextView
                        android:text="TP"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="3dp"
                        android:background="@drawable/textcircleviolet"
                        android:textColor="@color/clWhite"
                        android:textSize="@dimen/text16"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/tv_ItemComponentComment_ListComment_Avata" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:weightSum="10">
                        <RelativeLayout
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="wrap_content"
                            android:layout_weight="10"
                            android:layout_height="match_parent"
                            android:id="@+id/relativeLayout1">
                            <TextView
                                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:visibility="visible"
                                android:textColor="@color/clTransparent"
                                android:textSize="@dimen/text12"
                                android:id="@+id/textView1" />

                            <TextView
                                android:text="Text Tuấn Phạm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBlack"
                                android:textSize="@dimen/text14"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_weight="10"
                                android:id="@+id/tv_ItemComponentComment_ListComment_Name"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@+id/tv_ItemComponentComment_ListComment_Date"/>

                            <TextView
                                android:text="Text 18/03/97 12:00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBottomDisable"
                                android:textSize="@dimen/text12"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="5dp"
                                android:id="@+id/tv_ItemComponentComment_ListComment_Date"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:layout_marginTop="3dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="0.1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:layout_marginRight="10dp"
                            android:gravity="center">
                            <TextView
                                android:text="Text nhân viên kinh doanh "
                                android:layout_width="0.1dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBottomDisable"
                                android:textSize="@dimen/text12"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_weight="1"
                                android:id="@+id/tv_ItemComponentComment_ListComment_Position"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:id="@+id/ln_ItemComponentComment_ListComment_Attach">
                            <ImageView
                                android:src="@drawable/icon_ver2_attach"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginRight="5dp"
                                android:id="@+id/img_ItemComponentComment_ListComment_Attach"
                                android:layout_centerVertical="true" />
                            <TextView
                                android:text="5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBottomDisable"
                                android:textSize="@dimen/text12"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:id="@+id/tv_ItemComponentComment_ListComment_AttachCount"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:id="@+id/ln_ItemComponentComment_ListComment_Like">
                            <ImageView
                                android:src="@drawable/icon_ver2_like"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginRight="5dp"
                                android:id="@+id/img_ItemComponentComment_ListComment_Heart"
                                android:layout_centerVertical="true" />
                            <TextView
                                android:text="5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBottomDisable"
                                android:textSize="@dimen/text12"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:id="@+id/tv_ItemComponentComment_ListComment_LikeCount"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="0px"
                        android:minHeight="0px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">
                        <TextView
                            android:text="Text Em xem lại giấy tờ hợp đồng công ty TNHH BVF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/clBlack"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text14"
                            android:gravity="left"
                            android:ellipsize="end"
                            android:visibility="visible"
                            android:id="@+id/tv_ItemComponentComment_ListComment_Comment"/>
                    </LinearLayout>

                    <!-- height phải set cứng cho dễ tính toán -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="0px"
                        android:minHeight="0px"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_vertical"
                        android:id="@+id/ln_ItemComponentComment_ListComment_Action">
                        <TextView
                            android:text="Thích"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/clVer2BlueMain"
                            android:textSize="@dimen/text12"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:paddingRight="8dp"
                            android:id="@+id/tv_ItemComponentComment_ListComment_Like"/>

                        <TextView
                            android:text="Trả lời"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/clVer2BlueMain"
                            android:textSize="@dimen/text12"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                              android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:id="@+id/tv_ItemComponentComment_ListComment_Reply"/>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:minWidth="0px"
                        android:minHeight="0px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/recy_ItemComponentComment_ListComment_Attach_Image"
                        android:visibility="gone"
                        android:nestedScrollingEnabled="false"/>
                    <android.support.v7.widget.RecyclerView
                        android:minWidth="0px"
                        android:minHeight="0px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recy_ItemComponentComment_ListComment_Attach"
                        android:visibility="gone"
                        android:nestedScrollingEnabled="false"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
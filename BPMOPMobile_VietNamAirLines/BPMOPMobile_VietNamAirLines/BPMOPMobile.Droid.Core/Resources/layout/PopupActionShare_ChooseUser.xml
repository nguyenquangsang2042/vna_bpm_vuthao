
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:weightSum="10"
        android:background="@drawable/textcornerwhite2">
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="Chọn User hoặc group muốn chia sẻ"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/clBottomEnable"
                android:textSize="@dimen/text16"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_PopupActionShare_ChooseUser_Title"/>
            <ImageView
                android:src="@drawable/icon_close"
                android:padding="10dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/img_PopupActionShare_ChooseUser_Close"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_PopupActionShare_ChooseUser_Action_1"
                android:layout_toLeftOf="@+id/img_PopupActionShare_ChooseUser_Close"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/clGrayNavigator2"/>
            <ImageView
                android:src="@drawable/icon_check"
                android:tint="@color/clActionGreen"
                android:padding="12dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/img_PopupActionShare_ChooseUser_Accept"
                android:layout_toLeftOf="@+id/view_PopupActionShare_ChooseUser_Action_1"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:id="@+id/view1"
            android:background="@color/clGrayNavigator2"/>
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="45dp"
                        android:layout_marginTop="20dp"
            android:id="@+id/relativeLayout2"
            android:background="@drawable/edtcornerstrokegray">
            <ImageView
                android:src="@mipmap/icon_close"
                android:layout_width="35dp"
                android:id="@+id/img_PopupActionShare_ChooseUser_Delete"
                android:layout_centerVertical="true"
                android:tint="@android:color/darker_gray"
                android:layout_height="35dp"
                android:padding="10dp"
                android:visibility="visible"
                android:layout_alignParentRight="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/edt_PopupActionShare_ChooseUser"
                android:layout_toLeftOf="@+id/img_PopupActionShare_ChooseUser_Delete"
                android:gravity="center_vertical"
                android:textSize="@dimen/textsize"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/background_dark"
                android:hint="Tìm kiếm..."
                android:textColorHint="@color/clGraytitle"
                android:background="@null"  />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:id="@+id/ln_PopupActionShare_ChooseUser_User">
            <ListView
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lv_PopupActionShare_ChooseUser"
                android:paddingBottom="5dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
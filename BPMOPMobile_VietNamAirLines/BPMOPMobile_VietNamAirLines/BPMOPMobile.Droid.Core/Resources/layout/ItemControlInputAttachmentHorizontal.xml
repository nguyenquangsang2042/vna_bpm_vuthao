
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:src="@drawable/icon_filepdf"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_gravity="center"
            android:padding="5dp"
            android:id="@+id/img_ItemControlInputAttachmentHorizontal_Avatar" />
        <TextView
            android:text="Text Tên của File PDF dasda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/clBlack"
            android:textSize="@dimen/text13"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tv_ItemControlInputAttachmentHorizontal_FileName"/>
        <TextView
            android:text="Báo cáo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/clControlGray"
            android:textSize="@dimen/text12"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tv_ItemControlInputAttachmentHorizontal_Category"/>
    </LinearLayout>
</LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:id="@+id/ln_ItemControlInputAttachmentVertical"
    android:foreground="?attr/selectableItemBackground">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:padding="5dp">
            <ImageView
                android:src="@drawable/icon_pdffile"
                android:padding="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_ItemControlInputAttachmentVertical_Extension" />
        </LinearLayout>
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0.1dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:id="@+id/relativeLayout1">
            <ImageView
                android:src="@drawable/icon_ver2_newfile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="5dp"
                android:id="@+id/img_ItemControlInputAttachmentVertical_NewFile" />

            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:id="@+id/ln_ItemControlInputAttachmentVertical_Name">
                <TextView
                    android:text="Text Hợp đồng.pdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@color/clBottomEnable"
                    android:textSize="@dimen/text14"
                    android:maxLines="1"
                    android:id="@+id/tv_ItemControlInputAttachmentVertical_Name" />
                <TextView
                    android:text="Text 8.78 MB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@color/clGraySize"
                    android:textSize="@dimen/text11"
                    android:maxLines="1"
                    android:id="@+id/tv_ItemControlInputAttachmentVertical_Size" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/ln_ItemControlInputAttachmentVertical_Category">
            <TextView
                android:text="Nguyễn Văn A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/clBlack"
                android:textSize="@dimen/text14"
                android:maxLines="1"
                android:id="@+id/tv_ItemControlInputAttachmentVertical_Category" />
            <TextView
                android:text="Text kinh doanh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/clActionBlack"
                android:textSize="@dimen/text11"
                android:maxLines="1"
                android:id="@+id/tv_ItemControlInputAttachmentVertical_Position" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <View
        android:minHeight="0px"
        android:minWidth="0px"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"
        android:id="@+id/vw_ItemControlTaskList_Child_Lv2_MarginTop" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <RelativeLayout
            android:minWidth="0px"
            android:minHeight="0px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="0px"
                android:minHeight="0px"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:minHeight="0px"
                    android:minWidth="0px"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:visibility="visible"
                    android:background="@color/clBottomDisable"
                    android:alpha="0.2"
                    android:id="@+id/vw_ItemControlTaskList_Child_Lv2_GroupHorizon" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="0px"
                android:minHeight="0px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:id="@+id/ln_ItemControlTaskList_Child_Lv2_Group1">
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:id="@+id/vw_ItemControlTaskList_Child_Lv2_Group1"
                        android:background="@color/clBottomDisable"
                        android:alpha="0.2"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:id="@+id/ln_ItemControlTaskList_Child_Lv2_Group2"
                    android:layout_marginRight="7dp">
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:id="@+id/vw_ItemControlTaskList_Child_Lv2_Group2"
                        android:background="@color/clBottomDisable"
                        android:alpha="0.2"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="7dp">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:weightSum="10">
                <TextView
                    android:text="Text Tạo phiếu đề xuất"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clVer2BlueMain"
                    android:textSize="@dimen/text14"
                    android:gravity="left"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/tv_ItemControlTaskList_Child_Lv2_Title"
                    android:layout_weight="10"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp">
                <refractored.controls.CircleImageView
                    android:layout_centerHorizontal="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/img_ItemControlTaskList_Child_Lv2_Avata"
                    android:backgroundTint="#00000000"
                    android:tint="#00000000"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#ffffffff"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/icon_avatar64"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:layout_marginRight="2dp"
                            android:weightSum="10">
                            <TextView
                                android:text="Text Tuấn Phạm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBlack"
                                android:textSize="@dimen/text14"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_weight="10"
                                android:id="@+id/tv_ItemControlTaskList_Child_Lv2_Name"/>
                            <TextView
                                android:text="Text 18/03/97 12:00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBottomDisable"
                                android:textSize="@dimen/text12"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginLeft="5dp"
                                android:id="@+id/tv_ItemControlTaskList_Child_Lv2_Date"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:layout_marginRight="2dp"
                            android:gravity="center">
                            <TextView
                                android:text="Text nhân viên kinh doanh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBottomDisable"
                                android:textSize="@dimen/text12"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:id="@+id/tv_ItemControlTaskList_Child_Lv2_Position"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="50dp"
                            android:minHeight="25px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp">
                            <TextView
                                android:text="Text Đã duyệt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBlack"
                                android:textSize="@dimen/text12"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:layout_centerVertical="true"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:background="@drawable/textcornerred"
                                android:id="@+id/tv_ItemControlTaskList_Child_Lv2_Action"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/vw_ItemControlTaskList_Child_Lv2_ItemSpacing"
                android:layout_marginBottom="1dp"
                android:visibility="invisible"
                android:background="@color/clGray"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
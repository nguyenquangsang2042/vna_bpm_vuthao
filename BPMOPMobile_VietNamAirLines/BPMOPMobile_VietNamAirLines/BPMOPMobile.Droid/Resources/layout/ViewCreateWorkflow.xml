
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:weightSum="10"
    android:id="@+id/ln_ViewCreateWorkflow_All">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/rela_ViewCreateWorkflow_Toolbar"
        android:background="@color/clViolet">
        <ImageView
            android:src="@drawable/icon_back30"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_ViewCreateWorkflow_Back"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:tint="@android:color/background_light" />
        <ImageView
            android:src="@drawable/icon_ver2_filter"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:id="@+id/img_ViewCreateWorkflow_Filter"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:visibility="invisible"/>
        <TextView
            android:text="Board"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_ViewCreateWorkflow_Name"
            android:textColor="@android:color/background_light"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text16"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/img_ViewCreateWorkflow_Filter"
            android:layout_toRightOf="@+id/img_ViewCreateWorkflow_Back"
            android:gravity="center"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/rela_ViewCreateWorkflow_TaskName"
        android:background="@color/clGray"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone">
        <TextView
            android:text="Vui lòng chọn quy trình để khởi tạo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="@dimen/text14"
            android:textColor="@color/clBlack"
            android:textStyle="bold"
            android:id="@+id/tv_ViewCreateWorkflow_Name" />
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:id="@+id/ln_ViewCreateWorkflow_GroupWorkflow"
            android:background="@drawable/textcornerviolet2">
            <TextView
                android:text="Nhóm quy trình"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ViewCreateWorkflow_GroupWorkflow"
                android:textColor="@color/clWhite"
                android:textSize="@dimen/text14"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="0px"
        android:minHeight="0px"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="10"
        android:layout_margin="5dp"
        android:id="@+id/ln_ViewCreateWorkflow_CurrentGroupWorkflow"
        android:background="@drawable/textcornerstrokegray"
        android:visibility="visible">

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="0px"
            android:minHeight="0px"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:id="@+id/ln_ViewCreateWorkflow_CurrentGroupWorkflow">
            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="@dimen/text15"
                android:textColor="@color/clBlack"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_ViewCreateWorkflow_CurrentGroupWorkflow" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:src="@drawable/icon_back30"
                android:rotation="180"
                android:padding="10dp"
                android:tint="@color/clBlack"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>

    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipe_ViewCreateWorkflow">
        <RelativeLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ExpandableListView
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true"
                android:id="@+id/expand_ViewCreateWorkflow_Content" />
            <LinearLayout
                android:id="@+id/ln_ViewCreateWorkflow_NoData"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/clWhite"
                android:gravity="center"
                android:visibility="gone"
                android:layout_weight="10">
                <TextView
                    android:text="Không có dữ liệu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ViewCreateWorkflow_NoData"
                    android:textColor="@color/clBottomDisable"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:textSize="@dimen/text18"
                    android:padding="10dp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
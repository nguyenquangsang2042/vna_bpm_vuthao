
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:minWidth="25px"
        android:minHeight="25px"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ln_ItemExpandBoardChild_All">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ln_ItemExpandBoardChild_All_Top"
                android:foreground="?attr/selectableItemBackground">
                <RelativeLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">
                    <ImageView
                        android:src="@drawable/icon_ver2_favorite_uncheck"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/img_ItemExpandBoardChild_Favorite"
                        android:visibility="visible"/>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp">
                    <RelativeLayout
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <ImageView
                            android:src="@drawable/icon_testgroupboard"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/img_ItemExpandBoardChild_Avatar" />
                        <TextView
                            android:text="Text Phòng IT đăng ký làm việc ngoài giờ vào cuối tuần tại tháng 9/2019 sau đó đi OT sấp mặt"
                            android:layout_width="0.1dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="top"
                            android:textSize="@dimen/text14"
                            android:textColor="@color/clBlack"
                            android:maxLines="3"
                            android:lines="3"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="4"
                            android:visibility="gone"
                            android:id="@+id/tv_ItemExpandBoardChild_Avatar" />
                    </RelativeLayout>
                    <TextView
                        android:text="Text Phòng IT đăng ký làm việc ngoài giờ vào cuối tuần tại tháng 9/2019 sau đó đi OT sấp mặt"
                        android:layout_width="0.1dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="top"
                        android:textSize="@dimen/text14"
                        android:textColor="@color/clBlack"
                        android:maxLines="3"
                        android:lines="3"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4"
                        android:id="@+id/tv_ItemExpandBoardChild_Title" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/clGrayNavigator2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="2">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/ln_ItemExpandBoardChild_Board"
                    android:foreground="?attr/selectableItemBackground">
                    <ImageView
                        android:src="@drawable/icon_ver2_board"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:tint="@color/clBottomEnable"
                        android:backgroundTint="@color/clBoardBlue"
                        android:background="@drawable/textcirclecolor"
                        android:id="@+id/img_ItemExpandBoardChild_Board"/>
                    <TextView
                        android:text="Board"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:textSize="@dimen/text13"
                        android:textColor="@color/clBottomDisable"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_ItemExpandBoardChild_Board" />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/clGrayNavigator2"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/ln_ItemExpandBoardChild_List"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center">
                    <ImageView
                        android:src="@drawable/icon_ver2_list"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:backgroundTint="@color/clBoardGreen"
                        android:background="@drawable/textcirclecolor"
                        android:id="@+id/img_ItemExpandBoardChild_List"/>
                    <TextView
                        android:text="List"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:textSize="@dimen/text13"
                        android:textColor="@color/clBottomDisable"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_ItemExpandBoardChild_List" />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:visibility="gone"
                    android:background="@color/clGrayNavigator2"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone"
                    android:id="@+id/ln_ItemExpandBoardChild_Report">
                    <ImageView
                        android:src="@drawable/icon_ver2_report"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:backgroundTint="@color/clBoardRed"
                        android:background="@drawable/textcirclecolor"
                        android:id="@+id/img_ItemExpandBoardChild_Report"/>
                    <TextView
                        android:text="Report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:textSize="@dimen/text13"
                        android:textColor="@color/clBottomDisable"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_ItemExpandBoardChild_Report" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:id="@+id/ln_ItemExpandBoardChild_LoadMore">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:indeterminateTint="@color/clViolet"
            android:alpha="0.7"/>
    </LinearLayout>
</LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:id="@+id/ln_ViewChildAppListWorkflow_All">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/rela_ViewChildAppListWorkflow_Toolbar"
        android:background="@color/clWhite">

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginRight="2dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:background="@drawable/textcornerviolet2"
            android:backgroundTint="@color/clWhite"
            android:id="@+id/ln_ViewChildAppListWorkflow_Filter">
            <ImageView
                android:src="@drawable/icon_ver3_filter"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="12dp"
                android:tint="@color/clBottomDisable"
                android:id="@+id/img_ViewChildAppListWorkflow_Filter" />
        </LinearLayout>
        <ImageView
            android:src="@drawable/icon_ver2_search"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="12dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ln_ViewChildAppListWorkflow_Filter"
            android:tint="@color/clBottomDisable"
            android:visibility="gone"
            android:id="@+id/img_ViewChildAppListWorkflow_ShowSearch" />
        <TextView
            android:text="Việc đến tôi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_ViewChildAppListWorkflow_Name"
            android:textColor="@color/clVer2BlueMain"
            android:layout_toRightOf="@+id/img_ViewChildAppListWorkflow_Back"
            android:layout_toLeftOf="@+id/img_ViewChildAppListWorkflow_ShowSearch"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text16"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"/>
        <ImageView
            android:src="@drawable/icon_back30"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:tint="@color/clBottomDisable"
            android:id="@+id/img_ViewChildAppListWorkflow_Back"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_ViewChildAppListWorkflow_Content">
            <RelativeLayout
                android:minWidth="0px"
                android:minHeight="0px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:id="@+id/ln_ViewChildAppListWorkflow_Tab"
                    android:visibility="visible">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="1dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/drawable_tabbackground">
                        <TextView
                            android:text="Đến tôi (0)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_ViewChildAppListWorkflow_TabDangXuLy"
                            android:background="@drawable/drawable_tabselected"
                            android:textColor="@color/clVer2BlueMain"
                            android:textSize="@dimen/text14"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"/>
                        <TextView
                            android:text="Tôi bắt đầu (0)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_ViewChildAppListWorkflow_TabDaXuLy"
                            android:background="@drawable/drawable_tabnotselected"
                            android:textColor="@color/clWhite"
                            android:textSize="@dimen/text14"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:visibility="gone"
                    android:id="@+id/ln_ViewChildAppListWorkflow_Search">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardUseCompatPadding="true"
                        card_view:cardCornerRadius="5dp"
                        android:layout_margin="0.5dp">
                        <RelativeLayout
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/relativeLayout2"
                            android:background="@color/clGrayNavigator">
                            <ImageView
                                android:src="@drawable/icon_delete"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:id="@+id/img_ListWorkflowView_Search_Delete"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:tint="@color/clBottomDisable"
                                android:layout_marginRight="3dp"
                                android:padding="7dp" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/edt_ListWorkflowView_Search"
                                android:layout_toLeftOf="@+id/img_ListWorkflowView_Search_Delete"
                                android:layout_toRightOf="@+id/img_ListWorkflowView_Search"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/text16"
                                android:textStyle="italic"
                                android:paddingLeft="8dp"
                                android:paddingRight="5dp"
                                android:lines="1"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:inputType="text"
                                android:textColor="@android:color/background_dark"
                                android:hint="Tìm kiếm..."
                                android:textColorHint="@color/clBottomDisable"
                                android:background="@android:color/transparent" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/clGrayNavigator2"
                android:alpha="0.3"/>
            <android.support.v4.widget.SwipeRefreshLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/swipe_ViewChildAppListWorkflow">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10">
                    <android.support.v7.widget.RecyclerView
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_weight="10"
                        android:id="@+id/recy_ViewChildAppListWorkflow"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:scrollbarSize="1dp"
                        android:nestedScrollingEnabled="true"
                        android:visibility="visible"/>
                    <LinearLayout
                        android:id="@+id/ln_ViewChildAppListWorkflow_NoData"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/clWhite"
                        android:gravity="center"
                        android:visibility="visible"
                        android:layout_weight="10">
                        <ImageView
                            android:src="@drawable/icon_ver2_nodata"
                            android:layout_width="match_parent"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:id="@+id/imageView1"
                            android:layout_height="50dp"
                            android:visibility="gone"
                            android:tint="@color/clHint" />
                        <TextView
                            android:text="Không có dữ liệu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_ViewChildAppListWorkflow_NoData"
                            android:fontFamily="@string/text_light"
                            android:textColor="@color/clBottomDisable"
                            android:gravity="center"
                            android:textStyle="italic"
                            android:textSize="@dimen/text18"
                            android:padding="10dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:id="@+id/ln_ViewChildAppListWorkflow_BottomNavigation"
                        android:background="@color/clGrayNavigator">
                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ln_ViewChildAppListWorkflow_BlackFilter"
            android:background="@color/clBlack"
            android:alpha="0.5"
            android:visibility="gone"/>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ln_ViewChildAppListWorkflow_DisablePager"
            android:background="@color/transparent"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
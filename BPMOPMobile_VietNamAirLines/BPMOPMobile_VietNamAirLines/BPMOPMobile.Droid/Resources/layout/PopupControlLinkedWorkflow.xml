
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clWhite">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:text="Text Quy trình / Công việc liên kết"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/clViolet"
                android:textSize="@dimen/text16"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/recy_ViewListWorkflow_Action"
                android:id="@+id/tv_PopupControlLinkedWorkflow_Detail_Title"/>
            <ImageView
                android:src="@drawable/icon_tab_createworkflow004"
                android:padding="10dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/img_PopupControlLinkedWorkflow_Action_Close"
                android:layout_centerVertical="true"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_PopupControlLinkedWorkflow_Action_1"
                android:layout_toLeftOf="@+id/img_PopupControlLinkedWorkflow_Action_Close"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/clGrayNavigator2"/>
        </RelativeLayout>
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="40dp">
            <ImageView
                android:src="@drawable/icon_check"
                android:tint="@color/clActionGreen"
                android:padding="10dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/img_PopupControlLinkedWorkflow_Action_Accept"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_PopupControlLinkedWorkflow_Action_2"
                android:layout_toLeftOf="@+id/img_PopupControlLinkedWorkflow_Action_Accept"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/clGrayNavigator2"/>
            <ImageView
                android:src="@drawable/icon_attach_excel"
                android:tint="@color/clGraytitle"
                android:padding="12dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/img_PopupControlLinkedWorkflow_Action_Search"
                android:layout_toLeftOf="@+id/view_PopupControlLinkedWorkflow_Action_2"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp">
                <TextView
                    android:text="Từ ngày"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_PopupControlLinkedWorkflow_Action_StartDate"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text12"
                    android:textColor="@color/clGraytitle"
                    android:visibility="gone" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:background="@drawable/textcornerstrokegray"
                    android:id="@+id/ln_PopupControlLinkedWorkflow_Action_StartDate">
                    <TextView
                        android:text=""
                        android:hint="Từ ngày"
                        android:textColorHint="@color/clGraytitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:id="@+id/tv_PopupControlLinkedWorkflow_Action_StartDate"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text12"
                        android:padding="10dp"
                        android:textColor="@color/clBlack"
                        android:visibility="visible" />
                    <ImageView
                        android:src="@drawable/icon_tab_board"
                        android:tint="@color/clGraytitle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:padding="7dp"
                        android:id="@+id/img_PopupControlLinkedWorkflow_Action_StartDate" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:text="Đến ngày"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_PopupControlLinkedWorkflow_Action_EndDate"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text12"
                    android:textColor="@color/clGraytitle"
                    android:visibility="gone" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:background="@drawable/textcornerstrokegray"
                    android:id="@+id/ln_PopupControlLinkedWorkflow_Action_EndDate">
                    <TextView
                        android:text=""
                        android:hint="Đến ngày"
                        android:textColorHint="@color/clGraytitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:id="@+id/tv_PopupControlLinkedWorkflow_Action_EndDate"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text12"
                        android:padding="10dp"
                        android:textColor="@color/clBlack"
                        android:visibility="visible" />
                    <ImageView
                        android:src="@drawable/icon_tab_board"
                        android:tint="@color/clGraytitle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:padding="7dp"
                        android:id="@+id/img_PopupControlLinkedWorkflow_Action_EndDate" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp">
                <TextView
                    android:text="Quy Trình"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_PopupControlLinkedWorkflow_Action_Workflow"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text12"
                    android:textColor="@color/clGraytitle"
                    android:visibility="gone" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:background="@drawable/textcornerstrokegray"
                    android:id="@+id/ln_PopupControlLinkedWorkflow_Action_Workflow">
                    <TextView
                        android:text=""
                        android:hint="Quy trình"
                        android:textColorHint="@color/clGraytitle"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:id="@+id/tv_PopupControlLinkedWorkflow_Action_Workflow"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text12"
                        android:padding="10dp"
                        android:textColor="@color/clBlack"
                        android:visibility="visible" />
                    <ImageView
                        android:src="@drawable/icon_tab_triangle"
                        android:tint="@color/clGraytitle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:padding="7dp"
                        android:id="@+id/img_PopupControlLinkedWorkflow_Action_Workflow" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:text="Tình Trạng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_PopupControlLinkedWorkflow_Action_Status"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text12"
                    android:textColor="@color/clGraytitle"
                    android:visibility="gone" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:background="@drawable/textcornerstrokegray"
                    android:id="@+id/ln_PopupControlLinkedWorkflow_Action_Status">
                    <TextView
                        android:text=""
                        android:hint="Tình trạng"
                        android:textColorHint="@color/clGraytitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:id="@+id/tv_PopupControlLinkedWorkflow_Action_Status"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text12"
                        android:padding="10dp"
                        android:textColor="@color/clBlack"
                        android:visibility="visible" />
                    <ImageView
                        android:src="@drawable/icon_tab_triangle"
                        android:tint="@color/clGraytitle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:padding="7dp"
                        android:id="@+id/img_PopupControlLinkedWorkflow_Action_Status" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp">
                <TextView
                    android:text="Từ khóa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_PopupControlLinkedWorkflow_Action_Keyword"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text12"
                    android:textColor="@color/clGraytitle"
                    android:visibility="gone" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:background="@drawable/textcornerstrokegray"
                    android:id="@+id/ln_PopupControlLinkedWorkflow_Action_Keyword">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/edt_PopupControlLinkedWorkflow_Action_Keyword"
                        android:hint="Từ khóa (mã - nội dung)"
                        android:textColorHint="@color/clGraytitle"
                        android:textSize="@dimen/text12"
                        android:padding="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/clBlack"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/ln_PopupControlLinkedWorkflow_Category">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ln_PopupControlLinkedWorkflow_Category_Label"
                    android:background="@drawable/textcornergray"
                    android:weightSum="10"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:visibility="gone"
                    android:gravity="center">
                    <TextView
                        android:text="Text Mã yêu cầu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/clBlack"
                        android:textSize="@dimen/text12"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_marginLeft="45dp"
                        android:layout_weight="2.5"
                        android:id="@+id/tv_PopupControlLinkedWorkflow_Category_Label_ID"/>
                    <TextView
                        android:text="Nội dung"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/clBlack"
                        android:textSize="@dimen/text12"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_weight="2.5"
                        android:id="@+id/tv_PopupControlLinkedWorkflow_Category_Label_Content"/>
                    <TextView
                        android:text="Người yêu cầu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/clBlack"
                        android:textSize="@dimen/text12"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_weight="2.5"
                        android:id="@+id/tv_PopupControlLinkedWorkflow_Category_Label_CreatedName"/>
                    <TextView
                        android:text="Text Ngày tạo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/clBlack"
                        android:textSize="@dimen/text12"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:layout_weight="2.5"
                        android:id="@+id/tv_PopupControlLinkedWorkflow_Category_Label_CreatedDate"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:id="@+id/view1"
                    android:background="@color/clGrayNavigator"/>
                <android.support.v7.widget.RecyclerView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:nestedScrollingEnabled="true"
                    android:layout_weight="10"
                    android:id="@+id/recy_PopupControlLinkedWorkflow_Category" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:visibility="gone">
                    <android.support.v7.widget.RecyclerView
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="true"
                        android:layout_weight="10"
                        android:id="@+id/recy_PopupControlLinkedWorkflow_Category_Paging" />
                    <TextView
                        android:text="Text 1 - 20 trong 999 mục"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/clGraytitle"
                        android:textSize="@dimen/text12"
                        android:gravity="center"
                        android:id="@+id/tv_PopupControlLinkedWorkflow_Category_Paging"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
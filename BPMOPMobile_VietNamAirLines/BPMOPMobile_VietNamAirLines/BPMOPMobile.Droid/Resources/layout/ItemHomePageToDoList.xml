
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ln_ItemHomePageToDoList_Category"
        android:background="@color/clGrayGroup">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/view_ItemHomePageToDoList_Category"
            android:background="@color/clGray"/>
        <TextView
            android:text="Hôm qua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/clBottomDisable"
            android:textSize="@dimen/text14"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="left"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tv_ItemHomePageToDoList_Category"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ln_ItemHomePageToDoList_All"
        android:paddingTop="15dp"
        android:paddingBottom="9dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:alpha="1"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:id="@+id/ln_ItemHomePageToDoList_Avatar">
            <TextView
                android:text="TP"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@color/clWhite"
                android:textSize="@dimen/text16"
                android:layout_margin="2dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@drawable/textcircleviolet"
                android:id="@+id/tv_ItemHomePageToDoList_Avatar"
                android:visibility="visible"/>
            <Refractored.Controls.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ItemHomePageToDoList_Avatar"
                android:background="@color/clWhite"
                android:backgroundTint="#00000000"
                android:tint="#00000000"
                android:padding="3dp"
                android:src="@drawable/icon_avatar64"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_ItemHomePageToDoList_Content"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:text="Text Đăng ký công tác tại Thành Phố Hồ Chí Minh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clBlack"
                    android:textSize="@dimen/text15"
                    android:gravity="left"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_weight="10"
                    android:id="@+id/tv_ItemHomePageToDoList_Title"/>
                <TextView
                    android:text="19/02/03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clBottomDisable"
                    android:textSize="@dimen/text13"
                    android:gravity="right"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="2dp"
                    android:id="@+id/tv_ItemHomePageToDoList_Time"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="0px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:weightSum="10"
                android:gravity="center_vertical">
                <TextView
                    android:text="Text quy trình đề xuất tạm ứng chi phí tổ chức sự kiện"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clBottomDisable"
                    android:textSize="@dimen/text13"
                    android:gravity="left"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_weight="10"
                    android:id="@+id/tv_ItemHomePageToDoList_Description"/>
                <ImageView
                    android:src="@drawable/icon_ver2_star_checked"
                    android:padding="1dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/img_ItemHomePageToDoList_Favorite" />
                <ImageView
                    android:src="@drawable/icon_ver2_flag"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:tint="@color/clRed"
                    android:id="@+id/img_ItemHomePageToDoList_Flag"/>
                <ImageView
                    android:src="@drawable/icon_ver2_attach"
                    android:padding="3dp"
                    android:tint="@color/clGraytitle"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img_ItemHomePageToDoList_AttachFile" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="0px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="0px"
                    android:minHeight="0px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:id="@+id/ln_ItemHomePageToDoList_Avatar2">
                    <RelativeLayout
                        android:orientation="vertical"
                        android:minWidth="0px"
                        android:minHeight="0px"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="6dp"
                        android:id="@+id/rela_ItemHomePageToDoList_Avatar2">
                        <TextView
                            android:text="GD"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/textcircleviolet"
                            android:textColor="@color/clWhite"
                            android:textSize="@dimen/text12"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:visibility="visible"
                            android:layout_centerInParent="true"
                            android:id="@+id/tv_ItemHomePageToDoList_Avatar2" />
                        <Refractored.Controls.CircleImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/img_ItemHomePageToDoList_Avatar2"
                            android:background="@color/clWhite"
                            android:backgroundTint="#00000000"
                            android:tint="#00000000"
                            android:padding="3dp"
                            android:src="@drawable/icon_avatar64"
                            android:layout_centerInParent="true"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="0px"
                        android:minHeight="0px"
                        android:layout_width="0.1dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_ItemHomePageToDoList_StatusTime"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="2dp"
                        android:layout_weight="6">

                        <TextView
                            android:text="Text Đã duyệt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/clBlack"
                            android:textSize="@dimen/text13"
                            android:textAlignment="center"
                            android:layout_centerVertical="true"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:background="@drawable/textcornerred"
                            android:layout_toLeftOf="@+id/tv_ItemHomePageToDoList_StatusTime"
                            android:id="@+id/tv_ItemHomePageToDoList_Status"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:text="Text 8:00, 18/03/1997"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/clBottomDisable"
                            android:gravity="right"
                            android:textAlignment="textEnd"
                            android:textSize="@dimen/text13"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_centerVertical="true"
                            android:id="@+id/tv_ItemHomePageToDoList_StatusTime"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:id="@+id/ln_ItemHomePageToDoList_LoadMore">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:indeterminateTint="@color/clViolet"          
            android:alpha="0.7"/>
    </LinearLayout>

</LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:gravity="center_vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/ln_ItemCommentAttachFile_All"
        android:gravity="center_vertical">
        <TextView
            android:text="Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ItemCommentAttachFile_Title"
            android:textSize="@dimen/text14"
            android:textColor="@color/clBlueEnable"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="1"/>
        <ImageView
            android:src="@drawable/icon_ver2_star_controlattch_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/img_ItemCommentAttachFile_Delete" />
    </LinearLayout>
</LinearLayout>
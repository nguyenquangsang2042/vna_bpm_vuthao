
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clWhite">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/rela_ViewDetailWorkflow_Toolbar">
            <ImageView
                android:src="@drawable/icon_back_new"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_PopupControl_SingleChoice_Close"
                android:padding="10dp"
                android:tint="@color/clBottomDisable"
                android:layout_centerVertical="true"/>
            <TextView
                android:text="Việc đến tôi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_PopupControl_SingleChoice_Title"
                android:textColor="@color/clVer2BlueMain"
                android:textSize="@dimen/text16"
                android:gravity="center"
                android:ellipsize="end"
                android:lines="1"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/img_PopupControl_SingleChoice_Close"
                android:layout_toLeftOf="@+id/img_PopupControl_SingleChoice_Done"
                android:maxLines="1" />
            <ImageView
                android:src="@drawable/icon_check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_PopupControl_SingleChoice_Done"
                android:padding="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:tint="@color/clActionGreen" />
            <ImageView
                android:src="@drawable/icon_ver3_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_PopupControl_SingleChoice_Delete"
                android:visibility="gone"
                android:padding="8dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/img_PopupControl_SingleChoice_Done"
                android:layout_centerVertical="true"
                android:tint="@color/clActionRed" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:id="@+id/view_ItemHomePageToDoList_Category"
            android:background="@color/clGrayNavigator2"
            android:alpha="0.3"/>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@color/clGrayNavigator"
            android:id="@+id/ln_PopupControl_SingleChoice_Search"
            android:visibility="gone"
            android:gravity="center_vertical">
            <ImageView
                android:src="@drawable/icon_ver2_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@color/clGraytitle"
                android:padding="6dp"
                android:visibility="visible"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_PopupControl_SingleChoice_Search"
                android:fontFamily="@font/fontarial"
                android:background="@android:color/transparent"
                android:textSize="14sp"
                android:lines="5"
                android:padding="10dp"
                android:maxLines="5"
                android:gravity="top"
                android:textColorHint="@color/clGraytitle"
                android:hint="Nhập ý kiến"
                android:inputType="text"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recy_PopupControl_SingleChoice_Data" />

    </LinearLayout>
</LinearLayout>
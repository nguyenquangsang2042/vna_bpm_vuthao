
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/img_startview_x"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/img_ViewStartView_Background" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10">
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_weight="2.5">
                <TextView
                    android:text="Bảo mật 2 lớp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clGraytitle"
                    android:textSize="@dimen/text18"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:layout_alignParentBottom="true"
                    android:ellipsize="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/tv_ViewConfirmOTP_Title"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:text="Nhập 6 số từ ứng dụng bảo mật"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clGraytitle"
                    android:textSize="@dimen/text16"
                    android:gravity="left"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/tv_ViewConfirmOTP_Input"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:weightSum="6"
                    android:id="@+id/ln_ViewConfirmOTP_Character">
                    <TextView
                        android:text="1"
                        android:layout_weight="1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/tv_ViewConfirmOTP_Character1"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:background="@drawable/textcornerstrokegray"/>
                    <TextView
                        android:text="2"
                        android:layout_weight="1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/tv_ViewConfirmOTP_Character2"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/textcornerstrokegray"/>
                    <TextView
                        android:text="3"
                        android:layout_weight="1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/tv_ViewConfirmOTP_Character3"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/textcornerstrokegray"/>
                    <TextView
                        android:text="4"
                        android:layout_weight="1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/tv_ViewConfirmOTP_Character4"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/textcornerstrokegray"/>
                    <TextView
                        android:text="5"
                        android:layout_weight="1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/tv_ViewConfirmOTP_Character5"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/textcornerstrokegray"/>
                    <TextView
                        android:text="6"
                        android:layout_weight="1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/tv_ViewConfirmOTP_Character6"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/textcornerstrokegray"/>
                </LinearLayout>

                <RelativeLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Đăng nhập tài khoản khác?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/clVer2BlueMain"
                        android:textSize="@dimen/text14"
                        android:gravity="left"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_weight="10"
                        android:id="@+id/tv_ViewConfirmOTP_OtherAccount"/>
                    <TextView
                        android:text="Nhập lại"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/clActionRed"
                        android:textSize="@dimen/text14"
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_weight="10"
                        android:id="@+id/ln_ViewConfirmOTP_ClearText"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_weight="7.5"
                android:gravity="center"
                android:id="@+id/ln_ViewConfirmOTP_InputNumber">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp">
                    <TextView
                        android:text="1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/tv_ViewConfirmOTP_InputNumber_1"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:background="@drawable/textcirclegray"
                    android:foreground="?attr/selectableItemBackground"/>
                    <TextView
                        android:text="2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/tv_ViewConfirmOTP_InputNumber_2"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/textcirclegray"
                        android:foreground="?attr/selectableItemBackground"/>
                    <TextView
                        android:text="3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/tv_ViewConfirmOTP_InputNumber_3"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:background="@drawable/textcirclegray"
                        android:foreground="?attr/selectableItemBackground"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:text="4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/tv_ViewConfirmOTP_InputNumber_4"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:background="@drawable/textcirclegray"	
                        android:foreground="?attr/selectableItemBackground"/>
                    <TextView
                        android:text="5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/tv_ViewConfirmOTP_InputNumber_5"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/textcirclegray"
                        android:foreground="?attr/selectableItemBackground"/>
                    <TextView
                        android:text="6"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/tv_ViewConfirmOTP_InputNumber_6"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:background="@drawable/textcirclegray"
                        android:foreground="?attr/selectableItemBackground"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:text="7"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/tv_ViewConfirmOTP_InputNumber_7"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:background="@drawable/textcirclegray"	
                        android:foreground="?attr/selectableItemBackground"/>
                    <TextView
                        android:text="8"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/tv_ViewConfirmOTP_InputNumber_8"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/textcirclegray"	
                        android:foreground="?attr/selectableItemBackground"/>
                    <TextView
                        android:text="9"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/tv_ViewConfirmOTP_InputNumber_9"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:background="@drawable/textcirclegray"
                        android:foreground="?attr/selectableItemBackground"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:text="0"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/tv_ViewConfirmOTP_InputNumber_0"
                        android:textSize="@dimen/text20"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/textcirclegray"
                        android:foreground="?attr/selectableItemBackground"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/relabackground"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imgcovera"
            android:src="@drawable/img_vnaPlaneLogo"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
        <RelativeLayout
            android:layout_below="@id/imgcovera"
            android:id="@+id/relainputData"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/_FormLogin"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="20dp"
                    android:gravity="center_horizontal">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_marginBottom="10dp"
                                android:orientation="vertical"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ln_ViewStartView_VNAirlines_Name">
                                <EditText
                                    android:singleLine="true"
                                    android:fontFamily="san-serif-light"
                                    android:hint="Tên đăng nhập"
                                    android:paddingRight="13dp"
                                    android:paddingLeft="13dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="10dp"
                                    android:drawableLeft="@drawable/icon_vna_user"
                                    android:id="@+id/edt_ViewStartView_VNAirlines_Username"
                                    android:textSize="@dimen/textsize"
                                    android:background="@drawable/border_radius_white"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/ln_ViewStartView_VNAirlines_Pass">
                                <EditText
                                    android:fontFamily="san-serif-light"
                                    android:text=""
                                    android:background="@drawable/border_radius_white"
                                    android:paddingRight="13dp"
                                    android:paddingLeft="13dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="10dp"
                                    android:drawableLeft="@drawable/icon_vna_lock"
                                    android:id="@+id/edt_ViewStartView_VNAirlines_Pass"
                                    android:hint="Mật khẩu"
                                    android:maxLength="50"
                                    android:password="true"
                                    android:singleLine="true"
                                    android:imeOptions="actionGo"
                                    android:alpha="1"
                                    android:textSize="@dimen/textsize" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="0.2dp"
                        android:id="@+id/card_ViewStartView_VNAirlines_Login"
                        android:background="@drawable/textloginstartview"
                        android:backgroundTint="#C9982A">
                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"
                            android:fontFamily="san-serif-light"
                            android:id="@+id/tv_ViewStartView_VNAirlines_Login"
                            android:text="Sign in"
                            android:textColor="@color/clWhite"
                            android:background="@drawable/textloginstartview"
                            android:backgroundTint="#C9982A"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                />
                    </android.support.v7.widget.CardView>
                    <RelativeLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:visibility="gone"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/txt1"
                            android:textSize="@dimen/text15"
                            android:textColor="#000000"
                            android:textAlignment="center"
                            android:text="Don't have an account yet ?"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:visibility="gone"
                            android:layout_below="@id/txt1"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/customebutton"
                            android:id="@+id/txtSignUp"
                            android:text="Register"
                            android:textAllCaps="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:paddingBottom="20dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <LinearLayout
                        android:padding="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ln_StartView_Loading"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/background_light"
                        android:alpha="0.7"
                        android:layout_gravity="center_vertical">
                        <android.webkit.WebView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:backgroundTint="@color/transparent"
                            android:id="@+id/web_ViewStartView_VNAirlines_Advertisement"
                            android:visibility="gone"/>
                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:text="Đang kiểm tra..."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_ViewStartView_VNAirlines_Note"
                            android:textColor="#006885"
                            android:gravity="center"
                            android:textSize="@dimen/titlesize" />
                        <ProgressBar
                            android:id="@+id/process_Login"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/ImgViewlogoVNa"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/logovna"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>
    <ImageButton
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:id="@+id/btnBack_Startview"
        android:src="@drawable/icon_back_cycle"
        android:scaleType="fitXY"
        android:background="@color/clTransparent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</FrameLayout>
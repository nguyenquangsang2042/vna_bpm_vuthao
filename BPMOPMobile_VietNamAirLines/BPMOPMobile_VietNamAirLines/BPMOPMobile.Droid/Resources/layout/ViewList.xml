
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:id="@+id/ln_ViewList_All">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/ln_ViewList_Toolbar">

        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/clWhite">
            <ImageView
                android:src="@drawable/icon_back30"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:tint="@color/clBottomDisable"
                android:id="@+id/img_ViewList_Back"
                android:layout_centerVertical="true"/>
            <TextView
                android:text="Việc đến tôi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_ViewList_Title"
                android:textColor="@color/clVer2BlueMain"
                android:layout_toRightOf="@+id/img_ViewList_Back"
                android:layout_toLeftOf="@+id/img_ViewList_Category"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text16"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"/>
            <ImageView
                android:src="@drawable/icon_ver3_category"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="12dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_ViewList_ShowSearch"
                android:tint="@color/clBottomDisable"
                android:id="@+id/img_ViewList_Category" />
            <ImageView
                android:src="@drawable/icon_ver2_search"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="12dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_ViewList_Filter"
                android:tint="@color/clBottomDisable"
                android:id="@+id/img_ViewList_ShowSearch" />
            <ImageView
                android:src="@drawable/icon_ver3_filter"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="12dp"
                android:tint="@color/clBottomDisable"
                android:layout_alignParentRight="true"
                android:id="@+id/img_ViewList_Filter" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/clGrayNavigator"/>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="10">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/ln_ViewList_SubTitle"
                    android:background="@drawable/textcornergray"
                    android:backgroundTint="@color/clGrayNavigator"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:src="@drawable/icon_ver3_back"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:id="@+id/img_ViewList_SubTitle_Previous"
                        android:padding="11dp"
                        android:tint="@color/clVer2BlueMain"
                        android:rotation="180"/>
                    <TextView
                        android:text="Text hợp đồng phát triển dây chuyền sản xuất sản phẩm nông nghiệp thế hệ mới"
                        android:layout_weight="1"
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_ViewList_SubTitle"
                        android:textColor="@color/clBlack"
                        android:textSize="@dimen/text15"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:gravity="center"/>
                    <ImageView
                        android:src="@drawable/icon_ver3_back"
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:id="@+id/img_ViewList_SubTitle_Next"
                        android:padding="11dp"
                        android:tint="@color/clVer2BlueMain"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:visibility="gone"
                    android:id="@+id/ln_ViewList_Search">
                    <RelativeLayout
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:id="@+id/relativeLayout2"
                        android:background="@drawable/textcornerstrokegray"
                        android:backgroundTint="@color/clGrayNavigator"
                        android:layout_margin="5dp">
                        <ImageView
                            android:src="@drawable/icon_ver2_search"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:id="@+id/img_ViewList_Search"
                            android:layout_centerVertical="true"
                            android:tint="@color/clBottomDisable"
                            android:padding="7dp"
                            android:layout_marginLeft="5dp"/>
                        <ImageView
                            android:src="@drawable/icon_delete"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:id="@+id/img_ViewList_Search_Delete"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:tint="@color/clBottomDisable"
                            android:layout_marginRight="3dp"
                            android:visibility="gone"
                            android:padding="7dp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/edt_ViewList_Search"
                            android:layout_toLeftOf="@+id/img_ViewList_Search_Delete"
                            android:layout_toRightOf="@+id/img_ViewList_Search"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/text16"
                            android:paddingLeft="10dp"
                            android:paddingRight="5dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textStyle="italic"
                            android:inputType="text"
                            android:textColor="@android:color/background_dark"
                            android:hint="Tìm kiếm..."
                            android:textColorHint="@color/clBottomDisable"
                            android:background="@android:color/transparent" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <android.support.v4.widget.SwipeRefreshLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/swipe_ViewList">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:orientation="vertical"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible"
                            android:id="@+id/ln_ViewList_Category_List">
                            <android.support.v7.widget.RecyclerView
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/recy_ViewList_Category_List" />
                            <LinearLayout
                                android:id="@+id/ln_ViewList_NoData1"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/clWhite"
                                android:gravity="center"
                                android:visibility="visible">
                                <TextView
                                    android:text="Không có dữ liệu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_ViewList_NoData1"
                                    android:textColor="@color/clBottomDisable"
                                    android:gravity="center"
                                    android:textStyle="italic"
                                    android:textSize="@dimen/text18"
                                    android:padding="10dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:id="@+id/ln_ViewList_Category_Dynamic">
                            <android.support.v7.widget.RecyclerView
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/recy_ViewList_Category_Dynamic" />
                            <LinearLayout
                                android:id="@+id/ln_ViewList_NoData2"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/clWhite"
                                android:gravity="center"
                                android:visibility="visible">
                                <TextView
                                    android:text="Không có dữ liệu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_ViewList_NoData2"
                                    android:textColor="@color/clBottomDisable"
                                    android:gravity="center"
                                    android:textStyle="italic"
                                    android:textSize="@dimen/text18"
                                    android:padding="10dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:id="@+id/ln_ViewList_BottomNavigation"
                        android:background="@color/clGrayNavigator">
                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
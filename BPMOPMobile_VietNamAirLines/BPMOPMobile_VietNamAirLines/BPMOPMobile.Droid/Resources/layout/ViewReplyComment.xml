
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ln_ViewReplyComment_All">
    <BPMOPMobile.Droid.Class.CustomResizeLinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clWhite"
        android:id="@+id/ln_ViewReplyComment_Content"
        android:weightSum="10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/rela_ViewReplyComment_Toolbar">
            <ImageView
                android:src="@drawable/icon_back_new"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewReplyComment_Back"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:tint="@color/clViolet" />
            <TextView
                android:text="Bình luận"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_ViewReplyComment_Title"
                android:textColor="@color/clBlack"
                android:textSize="@dimen/text16"
                android:textStyle="bold"
                android:gravity="center"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/img_ViewReplyComment_Attach"
                android:layout_toRightOf="@+id/img_ViewReplyComment_Back"
                android:layout_centerInParent="true"/>
            <ImageView
                android:src="@drawable/icon_ver2_attach"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewReplyComment_Attach"
                android:padding="10dp"
                android:layout_toLeftOf="@+id/img_ViewReplyComment_Comment"
                android:layout_centerVertical="true"/>
            <ImageView
                android:src="@drawable/icon_ver2_comment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewReplyComment_Comment"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/clGrayNavigator2"/>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="0.1dp"
            android:layout_weight="10"
            android:id="@+id/ln_ViewReplyComment_ComponentComment"
            android:visibility="visible">

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="0px"
            android:minHeight="0px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_ViewDetailCreateTask_KeyBoard"
            android:layout_alignParentBottom="true"
            android:background="@drawable/textcornerstrokesolidgray"
            android:visibility="visible"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_ViewReplyComment_Comment"
                    android:text=""
                    android:textColor="@color/clBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text15"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:backgroundTint="@color/transparent"
                    android:background="@color/clWhite"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:minWidth="0px"
                android:minHeight="0px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recy_ViewReplyComment_AttachFile_Image" />
            <BPMOPMobile.Droid.Class.CustomFlexBoxRecyclerView
                android:minWidth="0px"
                android:minHeight="0px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/recy_ViewReplyComment_AttachFile" />
        </LinearLayout>
    </BPMOPMobile.Droid.Class.CustomResizeLinearLayout>


</LinearLayout>
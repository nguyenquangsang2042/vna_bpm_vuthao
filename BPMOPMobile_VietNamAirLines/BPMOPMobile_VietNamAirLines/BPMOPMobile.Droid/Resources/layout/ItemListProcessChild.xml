<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:minWidth="25px"
    android:minHeight="25px">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_ItemListProcessChild_Line"
                android:background="@color/clGraytitle"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_ItemChildExpandListFlow_All"
            android:layout_marginRight="2dp">

            <RelativeLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:id="@+id/ln_ItemChildExpandListFlow_Avatar">
                <refractored.controls.CircleImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/img_ItemListProcessChild_Avata"
                    android:backgroundTint="#00000000"
                    android:tint="#00000000"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#ffffffff"
                    android:src="@mipmap/icon_avatar64"/>
                <TextView
                    android:text="TP"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/textcircleviolet"
                    android:textColor="@color/clWhite"
                    android:textSize="@dimen/text16"
                    android:gravity="center"
                    android:id="@+id/tv_ItemListProcessChild_Avata" />
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ln_ItemChildExpandListFlow_Content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:layout_marginRight="2dp">
                        <TextView
                            android:text="Text Tuấn Phạm (Head of ABC)"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/clBlack"
                            android:textSize="@dimen/text16"
                            android:gravity="left"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:id="@+id/tv_ItemListProcessChild_NguoiXuLy"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:weightSum="10">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:layout_marginRight="2dp"
                        android:gravity="center">
                        <TextView
                            android:text="14:00 pm, 18/03/2020"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/clGraytitle"
                            android:textSize="@dimen/text14"
                            android:gravity="left"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:id="@+id/tv_ItemListProcessChild_Date"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="50dp"
                        android:minHeight="25px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp">
                        <TextView
                            android:text="Text Đã duyệt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/clWhite"
                            android:textSize="@dimen/text14"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_margin="3dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:background="@drawable/textcornerred"
                            android:id="@+id/tv_ItemListProcessChild_Action"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:text="Đã bổ sung rồi Đã bổ sung rồi Đã bổ sung rồi Đã bổ sung rồi Đã bổ sung rồi Đã bổ sung rồi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/clGraytitle"
                        android:textStyle="italic"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text14"
                        android:gravity="left"
                        android:ellipsize="end"
                        android:id="@+id/tv_ItemListProcessChild_YKien"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/ln_PopupVer4FilterAppBase_TopBlur" />

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clGraySearchUser">

        <LinearLayout
            android:id="@+id/lnParrentTinhtrang"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/vw_PopupVer4FilterAppBase_Top"
            android:background="@drawable/drawable_cornerfilter"/>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/clWhite"
            android:id="@+id/ln_PopupVer4FilterAppBase_TinhTrang_Content"
            android:foreground="?attr/selectableItemBackground">
            <ImageView
                android:src="@drawable/icon_ver3_trangthai"
                android:tint="@color/clGraytitle"
                android:padding="12dp"
                android:layout_width="40dp"
                android:layout_height="match_parent"/>
            <TextView
                android:text="Tình trạng"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_PopupVer4FilterAppBase_TinhTrang"
                android:gravity="center_vertical"
                android:textSize="@dimen/text14"
                android:textColor="@color/clBottomDisable"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="right">
                <TextView
                    android:text="Tình trạng Hoàng Đăng Khoa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_PopupVer4FilterAppBase_TinhTrang_Content"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:textColor="@color/clBlack"
                    android:textSize="@dimen/text14"/>
                <ImageView
                    android:src="@drawable/icon_back_new"
                    android:tint="@color/clGraytitle"
                    android:rotation="180"
                    android:padding="9dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/drawable_cornerfilter"/>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/clWhite"
            android:id="@+id/ln_PopupVer4FilterAppBase_TrangThai_Content"
            android:foreground="?attr/selectableItemBackground">
            <ImageView
                android:src="@drawable/icion_ver3_tinhtrang"
                android:tint="@color/clGraytitle"
                android:padding="12dp"
                android:layout_width="40dp"
                android:layout_height="match_parent"/>
            <TextView
                android:text="Trạng thái"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_PopupVer4FilterAppBase_TrangThai"
                android:gravity="center_vertical"
                android:textSize="@dimen/text14"
                android:textColor="@color/clBottomDisable"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="right">
                <TextView
                    android:text="Trạng thái Hoàng Đăng Khoa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_PopupVer4FilterAppBase_TrangThai_Content"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:textColor="@color/clBlack"
                    android:textSize="@dimen/text14"/>
                <ImageView
                    android:src="@drawable/icon_back_new"
                    android:tint="@color/clGraytitle"
                    android:rotation="180"
                    android:padding="9dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/clGray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/clWhite"
            android:id="@+id/ln_PopupVer4FilterAppBase_HanXuLy_Content"
            android:foreground="?attr/selectableItemBackground">
            <ImageView
                android:src="@drawable/icon_ver3_duedate"
                android:tint="@color/clGraytitle"
                android:padding="12dp"
                android:layout_width="40dp"
                android:layout_height="match_parent"/>
            <TextView
                android:text="Hạn xử lý"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_PopupVer4FilterAppBase_HanXuLy"
                android:gravity="center_vertical"
                android:textSize="@dimen/text14"
                android:textColor="@color/clBottomDisable"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right">
                <TextView
                    android:text="Hạn xử lý Hoàng Đăng Khoa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_PopupVer4FilterAppBase_HanXuLy_Content"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:textColor="@color/clBlack"
                    android:textSize="@dimen/text14"/>
                <ImageView
                    android:src="@drawable/icon_back_new"
                    android:tint="@color/clGraytitle"
                    android:rotation="180"
                    android:padding="9dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/drawable_cornerfilter"/>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/clWhite">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:src="@drawable/icon_ver2_calendar"
                    android:tint="@color/clGraytitle"
                    android:padding="12dp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="Ngày gửi đến"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/tv_PopupVer4FilterAppBase_Ngay"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text14"
                    android:textColor="@color/clBottomDisable"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/clGray"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="0.1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/ln_PopupVer4FilterAppBase_Ngay_TuNgay"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView
                        android:text="Từ ngày"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/lbl_PopupVer4FilterAppBase_Ngay_TuNgay"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text13"
                        android:textColor="@color/clBottomDisable"/>
                    <TextView
                        android:text="01/01/10"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_PopupVer4FilterAppBase_Ngay_TuNgay"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:ellipsize="end"
                        android:textColor="@color/clBlack"
                        android:textSize="@dimen/text13"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/clGray"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="0.1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/ln_PopupVer4FilterAppBase_Ngay_DenNgay"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView
                        android:text="Đến ngày"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/lbl_PopupVer4FilterAppBase_Ngay_DenNgay"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text13"
                        android:textColor="@color/clBottomDisable"/>
                    <TextView
                        android:text="01/01/10"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_PopupVer4FilterAppBase_Ngay_DenNgay"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:ellipsize="end"
                        android:textColor="@color/clBlack"
                        android:textSize="@dimen/text13"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
            </LinearLayout>
                        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/clGray"/>
        </LinearLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:text="Áp dụng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_PopupVer4FilterAppBase_Ngay_ApDung"
                android:layout_marginRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="@dimen/text12"
                android:layout_alignParentRight="true"
                android:background="@drawable/textcornerviolet2"
                android:backgroundTint="@color/clVer2BlueMain"
                android:textColor="@color/clWhite"/>
            <TextView
                android:text="Thiết lập lại"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_PopupVer4FilterAppBase_MacDinh"
                android:layout_marginRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textStyle="italic"
                android:textSize="@dimen/text12"
                android:layout_toLeftOf="@+id/tv_PopupVer4FilterAppBase_Ngay_ApDung"
                android:textColor="@color/clVer2BlueMain"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
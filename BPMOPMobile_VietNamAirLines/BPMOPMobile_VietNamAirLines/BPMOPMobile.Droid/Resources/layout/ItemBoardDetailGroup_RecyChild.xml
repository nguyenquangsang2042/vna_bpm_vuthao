
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:id="@+id/ln_ItemBoardDetailGroup_RecyChild_All"
    android:background="@drawable/textcornergray">
    <android.support.v7.widget.CardView
        android:minWidth="25px"
        android:minHeight="25px"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:id="@+id/card_ItemBoardDetailGroup_RecyChild_All">

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ln_ItemBoardDetailGroup_RecyChild_Data"
            android:foreground="?attr/selectableItemBackground">
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:text="18/03/20 19:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:textSize="@dimen/text13"
                    android:textColor="@color/clBottomDisable"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:layout_weight="4"
                    android:id="@+id/tv_ItemBoardDetailGroup_RecyChild_Date" />
                <TextView
                    android:text="Khẩn cấp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text13"
                    android:textColor="@color/clWhite"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:background="@drawable/textboardemergency"
                    android:id="@+id/tv_ItemBoardDetailGroup_RecyChild_Priority"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:layout_toLeftOf="@+id/img_ItemBoardDetailGroup_RecyChild_Subcribe"/>
                <ImageView
                    android:src="@drawable/icon_ver2_follow_checked"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="6dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/img_ItemBoardDetailGroup_RecyChild_Subcribe"
                    android:visibility="visible"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp">
                <RelativeLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:id="@+id/rela_ItemBoardDetailGroup_RecyChild_Avatar">
                    <TextView
                        android:text="TP"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:textColor="@color/clWhite"
                        android:textSize="@dimen/text13"
                        android:layout_margin="2dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:background="@drawable/textcircleviolet"
                        android:id="@+id/tv_ItemBoardDetailGroup_RecyChild_Avatar"
                        android:visibility="visible"/>
                    <Refractored.Controls.CircleImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:id="@+id/img_ItemBoardDetailGroup_RecyChild_Avatar"
                        android:background="@color/clWhite"
                        android:backgroundTint="#00000000"
                        android:tint="#00000000"
                        android:padding="3dp"
                        android:src="@drawable/icon_avatar64"
                        android:layout_centerInParent="true"
                        android:visibility="gone"/>
                </RelativeLayout>
                <TextView
                    android:text="Text Phòng IT đăng ký làm việc ngoài giờ vào cuối tuần tại tháng 9/2019 sau đó đi OT sấp mặt"
                    android:layout_width="0.1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:textSize="@dimen/text15"
                    android:textColor="@color/clBlack"
                    android:maxLines="3"
                    android:lines="3"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:id="@+id/tv_ItemBoardDetailGroup_RecyChild_Title" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="10">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/ln_ItemBoardDetailGroup_RecyChild_Board">
                    <ImageView
                        android:src="@drawable/icon_ver2_attach"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:tint="@color/clBottomDisable"
                        android:id="@+id/img_ItemBoardDetailGroup_RecyChild_Board"/>
                    <TextView
                        android:text="99+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:textSize="@dimen/text13"
                        android:textColor="@color/clBottomDisable"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_ItemBoardDetailGroup_RecyChild_CountAttach" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/ln_ItemBoardDetailGroup_RecyChild_List"
                    android:gravity="center">
                    <ImageView
                        android:src="@drawable/icon_bpm_btn_action_9"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="7dp"
                        android:scaleX="-1"
                        android:id="@+id/img_ItemBoardDetailGroup_RecyChild_List"/>
                    <TextView
                        android:text="99+"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:textSize="@dimen/text13"
                        android:textColor="@color/clBottomDisable"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_ItemBoardDetailGroup_RecyChild_CountComment" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="right">

                    <RelativeLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:id="@+id/rela_ItemBoardDetailGroup_RecyChild_Avatar2">
                        <TextView
                            android:text="TP"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textColor="@color/clWhite"
                            android:textSize="@dimen/text13"
                            android:layout_margin="2dp"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:background="@drawable/textcircleviolet"
                            android:id="@+id/tv_ItemBoardDetailGroup_RecyChild_Avatar2"
                            android:visibility="visible"/>
                        <Refractored.Controls.CircleImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/img_ItemBoardDetailGroup_RecyChild_Avatar2"
                            android:background="@color/clWhite"
                            android:backgroundTint="#00000000"
                            android:tint="#00000000"
                            android:padding="3dp"
                            android:src="@drawable/icon_avatar64"
                            android:layout_centerInParent="true"
                            android:visibility="gone"/>
                    </RelativeLayout>
                    <TextView
                        android:text="+99"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="@dimen/text13"
                        android:textColor="@color/clBottomDisable"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_ItemBoardDetailGroup_RecyChild_CountPeople" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/clGrayNavigator"
            android:visibility="gone"
            android:id="@+id/ln_ItemBoardDetailGroup_RecyChild_Override" />
    </android.support.v7.widget.CardView>

</LinearLayout>
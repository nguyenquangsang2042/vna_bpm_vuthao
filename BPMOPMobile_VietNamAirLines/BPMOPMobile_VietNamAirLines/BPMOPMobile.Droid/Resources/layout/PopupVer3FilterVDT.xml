
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/ln_PopupVer3FilterVDT_TopBlur" />

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clWhite">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/clGrayNavigator"/>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Trạng thái"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_PopupVer3FilterVDT_TrangThai"
                android:gravity="center"
                android:textSize="@dimen/text14"
                android:textStyle="bold"
                android:textColor="@color/clBlack"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:background="@drawable/drawable_popupfilter_notselected"
                android:id="@+id/ln_PopupVer3FilterVDT_TrangThai_Content">
                <TextView
                    android:text="Trạng thái Hoàng Đăng Khoa"
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_PopupVer3FilterVDT_TrangThai_Content"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:textColor="@color/clBlack"
                    android:textSize="@dimen/text13"
                    android:layout_weight="1"/>
                <ImageView
                    android:src="@drawable/icon_back_new"
                    android:tint="@color/clGraytitle"
                    android:rotation="-90"
                    android:padding="8dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Hạn hoàn tất"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_PopupVer3FilterVDT_HanXuLy"
                android:gravity="center"
                android:textSize="@dimen/text14"
                android:textStyle="bold"
                android:textColor="@color/clBlack"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:background="@drawable/drawable_popupfilter_notselected"
                android:id="@+id/ln_PopupVer3FilterVDT_HanXuLy_Content">
                <TextView
                    android:text="Hạn hoàn tất Hoàng Đăng Khoa"
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_PopupVer3FilterVDT_HanXuLy_Content"
                    android:maxLines="1"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:textColor="@color/clBlack"
                    android:textSize="@dimen/text13"
                    android:layout_weight="1"/>
                <ImageView
                    android:src="@drawable/icon_back_new"
                    android:tint="@color/clGraytitle"
                    android:rotation="-90"
                    android:padding="8dp"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/clGray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0.1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="7dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:text="Ngày gửi đến"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_PopupVer3FilterVDT_NgayGuiDen"
                    android:gravity="center"
                    android:textSize="@dimen/text14"
                    android:textStyle="bold"
                    android:textColor="@color/clBlack"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/drawable_popupfilter_notselected"
                    android:id="@+id/ln_PopupVer3FilterVDT_NgayGuiDen_TuNgay">
                    <TextView
                        android:text="Từ ngày"
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_PopupVer3FilterVDT_NgayGuiDen_TuNgay"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:ellipsize="end"
                        android:textColor="@color/clBottomDisable"
                        android:textSize="@dimen/text13"
                        android:layout_weight="1"/>
                    <ImageView
                        android:src="@drawable/icon_ver2_calendar"
                        android:id="@+id/img_PopupVer3FilterVDT_NgayGuiDen_TuNgay"
                        android:tint="@color/clGraytitle"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0.1dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text14"
                    android:textStyle="bold"
                    android:textColor="@color/clBlack"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/drawable_popupfilter_notselected"
                    android:id="@+id/ln_PopupVer3FilterVDT_NgayGuiDen_DenNgay">
                    <TextView
                        android:text="Đến ngày"
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_PopupVer3FilterVDT_NgayGuiDen_DenNgay"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:ellipsize="end"
                        android:textColor="@color/clBottomDisable"
                        android:textSize="@dimen/text13"
                        android:layout_weight="1"/>
                    <ImageView
                        android:src="@drawable/icon_ver2_calendar"
                        android:id="@+id/img_PopupVer3FilterVDT_NgayGuiDen_DenNgay"
                        android:tint="@color/clGraytitle"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:text="Áp dụng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_PopupVer3FilterVDT_NgayGuiDen_ApDung"
                android:layout_marginRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="@dimen/text12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textcornerviolet2"
                android:backgroundTint="@color/clViolet"
                android:textColor="@color/clWhite"/>
            <TextView
                android:text="Thiết lập lại"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_PopupVer3FilterVDT_MacDinh"
                android:layout_marginRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textStyle="italic"
                android:textSize="@dimen/text12"
                android:layout_toLeftOf="@+id/tv_PopupVer3FilterVDT_NgayGuiDen_ApDung"
                android:textColor="@color/clViolet"/>

            <com.telerik.widget.calendar.RadCalendarView
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:visibility="gone"
                android:id="@+id/calendar_PopupVer3FilterVDT_NgayGuiDen_TuNgay" />
            <com.telerik.widget.calendar.RadCalendarView
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:visibility="gone"
                android:id="@+id/calendar_PopupVer3FilterVDT_NgayGuiDen_DenNgay" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/clGray"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
     <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/rela_ViewDetailWorkflow_Toolbar">
            <ImageView
                android:src="@drawable/icon_back_new"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_PopupControl_InputTextFormat_Close"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:tint="@color/clBottomDisable" />
            <TextView
                android:text="Việc đến tôi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_PopupControl_InputTextFormat_Title"
                android:textColor="@color/clVer2BlueMain"
                android:textSize="@dimen/text16"
                android:gravity="center"
                android:ellipsize="end"
                android:lines="1"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/img_PopupControl_InputTextFormat_Close"
                android:layout_toLeftOf="@+id/img_PopupControl_InputTextFormat_Done"
                android:maxLines="1" />
            <ImageView
            android:visibility="invisible"
                android:src="@drawable/icon_check"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_PopupControl_InputTextFormat_Done"
                android:padding="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:tint="@color/clActionGreen" />
            <ImageView
                android:visibility="invisible"
                android:src="@drawable/icon_ver3_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_PopupControl_InputTextFormat_Delete"
                android:padding="8dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/img_PopupControl_InputTextFormat_Done"
                android:layout_centerVertical="true"
                android:tint="@color/clActionRed" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:id="@+id/view_ItemHomePageToDoList_Category"
            android:background="@color/clGrayNavigator2"/>
        <ScrollView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtDetailInDisable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </ScrollView>
        

</LinearLayout>

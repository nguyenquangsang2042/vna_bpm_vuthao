<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@android:color/background_light">
	<TextView
		android:text="Date"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/textView1"
		android:padding="15dp"
		android:textColor="@android:color/background_dark"
		android:textSize="18sp"
		android:gravity="center"
		android:fontFamily="@font/robotoregular"
		android:visibility="invisible" />
	<LinearLayout
		android:orientation="horizontal"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:id="@+id/ln_PopupChooseDateTime"
		android:weightSum="2">
		<LinearLayout
			android:orientation="vertical"
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:id="@+id/linearLayout4"
			android:layout_weight="1">
			<TextView
				android:text="Date"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/tv_PopupChooseDateTime_Date"
				android:textColor="@color/clBlue"
				android:fontFamily="@font/robotoregular"
				android:gravity="center"
				android:textSize="16sp"
				android:padding="10dp" />
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:id="@+id/view_PopupChooseDateTime_Date"
				android:background="@color/clBlue"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp" />
		</LinearLayout>
		<LinearLayout
			android:orientation="vertical"
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:id="@+id/linearLayout5"
			android:layout_weight="1">
			<TextView
				android:text="Time"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/tv_PopupChooseDateTime_Time"
				android:textColor="@android:color/background_dark"
				android:fontFamily="@font/robotoregular"
				android:textSize="16sp"
				android:gravity="center"
				android:paddingBottom="10dp"
				android:paddingTop="10dp" />
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:id="@+id/view_PopupChooseDateTime_Time"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp" />
		</LinearLayout>
	</LinearLayout>
    <FrameLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/frameLayout">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear_PopupChooseDateTime_Date">
            <DatePicker
                android:id="@+id/datepick_PopupChooseDateTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:background="@android:color/background_light"
                android:minWidth="25px"
                android:minHeight="25px" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear_PopupChooseDateTime_Time">
            <TimePicker
                android:id="@+id/timepick_PopupChooseDateTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:timePickerMode="spinner"
                android:background="@android:color/background_light" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearLayout3"
        android:weightSum="2"
        android:layout_marginBottom="20dp">
		<LinearLayout
			android:orientation="vertical"
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="0dp"
			android:paddingBottom="5dp"
			android:paddingTop="5dp"
			android:paddingLeft="10dp"
			android:layout_height="match_parent"
			android:id="@+id/linearLayout6"
			android:layout_weight="1"
			android:layout_marginRight="30dp">
			<TextView
				android:text="Hủy"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/tv_PopupChooseDateTime_Close"
				android:fontFamily="@font/robotoregular"
				android:textSize="16sp"
				android:textColor="@color/clBlue"
				android:gravity="center"
				android:background="@mipmap/textvienxam"
				android:ellipsize="end" />
		</LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout7"
            android:layout_weight="1">
			<TextView
				android:text="Đồng ý"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:fontFamily="@font/robotoregular"
				android:id="@+id/tv_PopupChooseDateTime_Confirm"
				android:textColor="@color/clBlue"
				android:textSize="16sp"
				android:gravity="center"
				android:background="@mipmap/textvienxam" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
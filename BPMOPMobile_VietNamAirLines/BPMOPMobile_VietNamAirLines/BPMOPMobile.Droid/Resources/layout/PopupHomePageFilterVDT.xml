
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clWhite">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/clGrayNavigator"/>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/ln_PopupHomePageFilterVDT_TrangThai">
        <TextView
            android:text="Trạng thái"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_PopupHomePageFilterVDT_TrangThai"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="@dimen/text14"
            android:textStyle="bold"
            android:textColor="@color/clBlack"/>
        <LinearLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout1"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1"
                android:weightSum="3">
                <TextView
                    android:text="Tất cả"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_PopupHomePageFilterVDT_TrangThai_TatCa"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/clWhite"
                    android:textSize="@dimen/text13"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textcornerviolet2"/>
                <TextView
                    android:text="Cần xử lý"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_PopupHomePageFilterVDT_TrangThai_TatCa"
                    android:id="@+id/tv_PopupHomePageFilterVDT_TrangThai_CXL"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/clBottomDisable"
                    android:textSize="@dimen/text13"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textcornergray"/>
                <TextView
                    android:text="Đã xử lý"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_PopupHomePageFilterVDT_TrangThai_CXL"
                    android:id="@+id/tv_PopupHomePageFilterVDT_TrangThai_DXL"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/clBottomDisable"
                    android:textSize="@dimen/text13"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textcornergray"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/clGray"
        android:id="@+id/view1" />

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ln_PopupHomePageFilter_HanXuLy">
        <TextView
            android:text="Hạn xử lý"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_PopupHomePageFilterVDT_HanXuLy"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="@dimen/text14"
            android:textStyle="bold"
            android:textColor="@color/clBlack"/>
        <LinearLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout1"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1"
                android:weightSum="3">
                <TextView
                    android:text="Tất cả"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_PopupHomePageFilterVDT_HanXuLy_TatCa"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/clWhite"
                    android:textSize="@dimen/text13"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textcornerviolet2"/>
                <TextView
                    android:text="Quá hạn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_PopupHomePageFilterVDT_TrangThai_TatCa"
                    android:id="@+id/tv_PopupHomePageFilterVDT_HanXuLy_QuaHan"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/clBottomDisable"
                    android:textSize="@dimen/text13"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textcornergray"/>
                <TextView
                    android:text="Trong hạn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_PopupHomePageFilterVDT_TrangThai_CXL"
                    android:id="@+id/tv_PopupHomePageFilterVDT_HanXuLy_TrongHan"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/clBottomDisable"
                    android:textSize="@dimen/text13"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textcornergray"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/clGray"
        android:id="@+id/view2" />

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ln_PopupHomePageFilter_NgayGuiDen">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Ngày gửi đến"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:id="@+id/tv_PopupHomePageFilterVDT_NgayGuiDen"
                android:layout_gravity="center"
                android:gravity="left"
                android:textSize="@dimen/text14"
                android:textStyle="bold"
                android:textColor="@color/clBlack"/>
            <ImageView
                android:src="@drawable/icon_backdefault"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:visibility="gone"
                android:id="@+id/img_PopupHomePageFilterVDT_Default" />
        </LinearLayout>
        <LinearLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout1"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1"
                android:weightSum="2">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/textcornerstrokegray"
                    android:id="@+id/ln_PopupHomePageFilterVDT_NgayGuiDen_TuNgay">

                    <TextView
                        android:text="Từ ngày"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/tv_PopupHomePageFilterVDT_NgayGuiDen_TuNgay"
                        android:textAlignment="textStart"
                        android:textColor="@color/clBottomDisable"
                        android:textSize="@dimen/text13"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="5dp"/>
                    <ImageView
                        android:src="@drawable/icon_ver2_calendar"
                        android:id="@+id/img_PopupHomePageFilterVDT_NgayGuiDen_TuNgay"
                        android:tint="@color/clGraytitle"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textcornerstrokegray"
                    android:id="@+id/ln_PopupHomePageFilterVDT_NgayGuiDen_DenNgay">

                    <TextView
                        android:text="Đến ngày"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/tv_PopupHomePageFilterVDT_NgayGuiDen_DenNgay"
                        android:textAlignment="textStart"
                        android:textColor="@color/clBottomDisable"
                        android:textSize="@dimen/text13"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="5dp"/>
                    <ImageView
                        android:src="@drawable/icon_ver2_calendar"
                        android:id="@+id/img_PopupHomePageFilterVDT_NgayGuiDen_DenNgay"
                        android:tint="@color/clGraytitle"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rela_PopupHomePageFilter_ApDung"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="Áp dụng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_PopupHomePageFilterVDT_NgayGuiDen_ApDung"
            android:layout_marginRight="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="@dimen/text12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/textcornerviolet2"
            android:textColor="@color/clWhite"/>
        <TextView
            android:text="Thiết lập lại"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_PopupHomePageFilterVDT_MacDinh"
            android:layout_marginRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textStyle="italic"
            android:textSize="@dimen/text12"
            android:layout_toLeftOf="@+id/tv_PopupHomePageFilterVDT_NgayGuiDen_ApDung"
            android:textColor="@color/clViolet"/>
        <com.telerik.widget.calendar.RadCalendarView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:visibility="gone"
            android:id="@+id/calendar_PopupHomePageFilterVDT_NgayGuiDen_TuNgay" />
        <com.telerik.widget.calendar.RadCalendarView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:visibility="gone"
            android:id="@+id/calendar_PopupHomePageFilterVDT_NgayGuiDen_DenNgay" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/clGray"/>

</LinearLayout>
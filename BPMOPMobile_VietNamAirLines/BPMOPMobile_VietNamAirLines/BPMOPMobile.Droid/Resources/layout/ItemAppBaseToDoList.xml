
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ln_ItemAppBaseToDoList_Category"
        android:background="@color/clGrayGroup">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/view_ItemAppBaseToDoList_Category"
            android:background="@color/clGray"/>
        <TextView
            android:text="Hôm qua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/clBottomDisable"
            android:textSize="@dimen/text14"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="left"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tv_ItemAppBaseToDoList_Category"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ln_ItemAppBaseToDoList_All"
        android:paddingTop="15dp"
        android:paddingBottom="9dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:alpha="1"
        android:foreground="?attr/selectableItemBackground">

        <Refractored.Controls.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_ItemAppBaseToDoList_Avatar"
            android:background="@color/clWhite"
            android:backgroundTint="#00000000"
            android:tint="#00000000"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_avatar64"
            android:layout_centerInParent="true"
            android:visibility="visible"/>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_ItemAppBaseToDoList_Content"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:text="Text Đăng ký công tác tại Thành Phố Hồ Chí Minh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clBlack"
                    android:textSize="@dimen/text15"
                    android:gravity="left"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_weight="10"
                    android:id="@+id/tv_ItemAppBaseToDoList_Title"/>
                <TextView
                    android:text="19/02/03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clBottomDisable"
                    android:textSize="@dimen/text12"
                    android:gravity="right"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="2dp"
                    android:id="@+id/tv_ItemAppBaseToDoList_Time"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="0px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:weightSum="10"
                android:gravity="center_vertical">
                <TextView
                    android:text="Text quy trình đề xuất tạm ứng chi phí tổ chức sự kiện"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clBottomDisable"
                    android:textSize="@dimen/text12"
                    android:gravity="left"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_weight="10"
                    android:id="@+id/tv_ItemAppBaseToDoList_Description"/>
                <ImageView
                    android:src="@drawable/icon_ver2_star_checked"
                    android:padding="1dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/img_ItemAppBaseToDoList_Favorite" />
                <ImageView
                    android:src="@drawable/icon_ver2_flag"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1dp"
                    android:tint="@color/clRed"
                    android:id="@+id/img_ItemAppBaseToDoList_Flag"/>
                <ImageView
                    android:src="@drawable/icon_ver2_attach"
                    android:padding="3dp"
                    android:tint="@color/clGraytitle"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img_ItemAppBaseToDoList_AttachFile" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="0px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">
                <TextView
                    android:text="Text Đã duyệt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clBlack"
                    android:textSize="@dimen/text12"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/textcornerred"
                    android:id="@+id/tv_ItemAppBaseToDoList_Status"/>
                <TextView
                    android:text="Text 8:00, 18/03/1997"
                    android:layout_width="0.1dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clBottomDisable"
                    android:gravity="right"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/text12"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_ItemAppBaseToDoList_StatusTime"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:id="@+id/ln_ItemAppBaseToDoList_LoadMore">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:indeterminateTint="@color/clViolet"
            android:alpha="0.7"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:background="@drawable/textcornerwhite2"
        android:layout_margin="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/ln_PopupAction_Share"
        android:weightSum="10"
       
        android:visibility="visible">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:src="@drawable/icon_ver2_share"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:padding="5dp"
                android:id="@+id/img_PopupAction_Share_Share" />
            <TextView
                android:text="Chia sẻ cho người / nhóm khác xem yêu cầu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/clBlack"
                android:textSize="@dimen/text15"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_PopupAction_Share_title"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/view1"
            android:background="@color/clGrayNavigator2"/>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edtcornerstrokegray"
                android:layout_marginTop="10dp"
                android:weightSum="10">
                <android.support.v7.widget.RecyclerView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:id="@+id/recy_PopupAction_Share_User" />
                <ImageView
                    android:src="@drawable/icon_ver2_user"
                    android:layout_width="35dp"
                    android:id="@+id/img_PopupAction_Share_User"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_PopupAction_Share_Comment"
                android:background="@drawable/edtcornerstrokegray"
                android:textSize="14sp"
                android:lines="5"
                android:padding="10dp"
                android:maxLines="5"
                android:gravity="top"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/clGraytitle"
                android:hint="Nhập ý kiến"
                android:inputType="textMultiLine"/>
            <ListView
                android:minWidth="25px"
                android:minHeight="45dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_weight="10"
                android:id="@+id/lv_PopupControlAttachmentChooseFile_InApp"
                android:visibility="gone"/>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/clGrayNavigator2"/>
                <TextView
                    android:text="Lịch sử chia sẻ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/clGraytitle"
                    android:textSize="@dimen/text14"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/tv_PopupActionShare_History"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/clGrayNavigator2"/>
            </LinearLayout>

            <ExpandableListView
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_weight="1"
                android:groupIndicator="@null"
                android:childIndicator="@null"
                android:dividerHeight="0px"
                android:id="@+id/expand_PopupActionShare_History" />
 
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:id="@+id/ln_PopupActionChooseUser_Action"
                android:paddingBottom="10dp">
                <TextView
                    android:text="Thoát"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_PopupActionChooseUser_Huy"
                    android:textColor="@color/clRed"
                    android:textSize="@dimen/text14"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp" />
                <TextView
                    android:text="Hoàn tất"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_PopupActionChooseUser_HoanTat"
                    android:textColor="@android:color/background_light"
                    android:background="@drawable/textcornerviolet2"
                    android:textSize="@dimen/text14"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>

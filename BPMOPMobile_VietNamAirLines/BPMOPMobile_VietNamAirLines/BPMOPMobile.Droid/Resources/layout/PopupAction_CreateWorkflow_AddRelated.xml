
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clWhite">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:src="@drawable/icon_back30"
                android:padding="10dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:tint="@color/clViolet"
                android:id="@+id/img_PopupAction_CreateWorkflow_AddRelated_Action_Close"
                android:layout_centerVertical="true"/>
            <TextView
                android:text="Text Quy trình / Công việc liên kết"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/clBlack"
                android:textSize="@dimen/text16"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/img_PopupAction_CreateWorkflow_AddRelated_Action_Close"
                android:layout_toLeftOf="@+id/img_PopupAction_CreateWorkflow_AddRelated_Action_Search"
                android:id="@+id/tv_PopupAction_CreateWorkflow_AddRelated_Detail_Title"/>
            <ImageView
                android:src="@drawable/icon_check"
                android:tint="@color/clActionGreen"
                android:padding="10dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/img_PopupAction_CreateWorkflow_AddRelated_Action_Accept"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:src="@drawable/icon_ver2_search"
                android:padding="10dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/img_PopupAction_CreateWorkflow_AddRelated_Action_Search"
                android:layout_toLeftOf="@+id/view_PopupAction_CreateWorkflow_AddRelated_Action_2"
                android:layout_centerVertical="true"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_PopupAction_CreateWorkflow_AddRelated_Action_2"
                android:layout_toLeftOf="@+id/img_PopupAction_CreateWorkflow_AddRelated_Action_Accept"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/clGrayNavigator2"/>
        </RelativeLayout>
                        <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:id="@+id/view1"
                    android:background="@color/clGrayNavigator"/>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:background="@drawable/textcornerstrokegray"
                    android:id="@+id/ln_PopupAction_CreateWorkflow_AddRelated_Action_StartDate">
                    <TextView
                        android:text=""
                        android:hint="Từ ngày"
                        android:textColorHint="@color/clGraytitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:id="@+id/tv_PopupAction_CreateWorkflow_AddRelated_Action_StartDate"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text12"
                        android:textStyle="italic"
                        android:padding="10dp"
                        android:textColor="@color/clBlack"
                        android:visibility="visible" />
                    <ImageView
                        android:src="@drawable/icon_ver2_calendar"
                        android:tint="@color/clGraytitle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:id="@+id/img_PopupAction_CreateWorkflow_AddRelated_Action_StartDate" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:background="@drawable/textcornerstrokegray"
                    android:id="@+id/ln_PopupAction_CreateWorkflow_AddRelated_Action_EndDate">
                    <TextView
                        android:text=""
                        android:hint="Đến ngày"
                        android:textColorHint="@color/clGraytitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:id="@+id/tv_PopupAction_CreateWorkflow_AddRelated_Action_EndDate"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text12"
                        android:textStyle="italic"
                        android:padding="10dp"
                        android:textColor="@color/clBlack"
                        android:visibility="visible" />
                    <ImageView
                        android:src="@drawable/icon_ver2_calendar"
                        android:tint="@color/clGraytitle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:id="@+id/img_PopupAction_CreateWorkflow_AddRelated_Action_EndDate" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:background="@drawable/textcornerstrokegray"
                    android:id="@+id/ln_PopupAction_CreateWorkflow_AddRelated_Action_Workflow">
                    <TextView
                        android:text=""
                        android:hint="Quy trình"
                        android:textColorHint="@color/clGraytitle"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:id="@+id/tv_PopupAction_CreateWorkflow_AddRelated_Action_Workflow"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text12"
                        android:textStyle="italic"
                        android:padding="10dp"
                        android:textColor="@color/clBlack"
                        android:visibility="visible" />
                    <ImageView
                        android:src="@drawable/icon_back30"
                        android:tint="@color/clGraytitle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:rotation="-90"
                        android:padding="8dp"
                        android:id="@+id/img_PopupAction_CreateWorkflow_AddRelated_Action_Workflow" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:weightSum="10"
                    android:background="@drawable/textcornerstrokegray"
                    android:id="@+id/ln_PopupAction_CreateWorkflow_AddRelated_Action_Status">
                    <TextView
                        android:text=""
                        android:hint="Tình trạng"
                        android:textColorHint="@color/clGraytitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:id="@+id/tv_PopupAction_CreateWorkflow_AddRelated_Action_Status"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text12"
                        android:textStyle="italic"
                        android:padding="10dp"
                        android:textColor="@color/clBlack"
                        android:visibility="visible" />
                    <ImageView
                        android:src="@drawable/icon_back30"
                        android:tint="@color/clGraytitle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:rotation="-90"
                        android:padding="8dp"
                        android:id="@+id/img_PopupAction_CreateWorkflow_AddRelated_Action_Status" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:weightSum="10"
                android:background="@drawable/textcornerstrokegray"
                android:id="@+id/ln_PopupAction_CreateWorkflow_AddRelated_Action_Keyword">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/edt_PopupAction_CreateWorkflow_AddRelated_Action_Keyword"
                    android:hint="Từ khóa (mã - nội dung)"
                    android:textColorHint="@color/clGraytitle"
                    android:textSize="@dimen/text12"
                    android:textStyle="italic"
                    android:padding="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/clBlack"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/ln_PopupAction_CreateWorkflow_AddRelated_Category">
            <android.support.v7.widget.RecyclerView
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:nestedScrollingEnabled="true"
                android:layout_weight="10"
                android:id="@+id/recy_PopupAction_CreateWorkflow_AddRelated_Category" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
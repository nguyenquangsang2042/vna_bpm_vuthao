
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:weightSum="10">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clWhite"
        android:id="@+id/ln_ViewHomePage_Toolbar"
        android:paddingLeft="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/relativeLayout1">
            <refractored.controls.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_ViewHomePage_Avata"
                android:backgroundTint="@color/transparent"
                android:tint="@color/transparent"
                android:src="@drawable/icon_avatar64"
                android:layout_centerVertical="true"
                app:civ_border_overlay="false"
                android:padding="5dp"
                android:layout_marginRight="15dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img_ViewHomePage_Avata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_back_follow"
                android:backgroundTint="@color/transparent"
                android:tint="@color/transparent"
                android:src="@drawable/icon_back30"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_marginRight="15dp"/>
            <TextView
                android:text="Trang chủ Test"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_ViewHomePage_TrangChu"
                android:gravity="center"
                android:textColor="@color/clVer2BlueMain"
                android:textSize="@dimen/text16"/>
            </LinearLayout>
            <ImageView
                android:src="@drawable/icon_ver2_createtask"
                android:layout_width="25dp"
                android:layout_height="45dp"
                android:padding="2dp"
                android:layout_marginRight="5dp"
                android:tint="@color/clVer2BlueMain"
                android:id="@+id/img_ViewHomePage_CreateWorkflow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/textcornerviolet2"
                android:backgroundTint="@color/clWhite"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginRight="2dp"
                android:layout_centerVertical="true"
                android:id="@+id/ln_ViewHomePage_Filter">
                <ImageView
                    android:src="@drawable/icon_ver3_filter"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="12dp"
                    android:layout_alignParentRight="true"
                    android:tint="@color/clBottomDisable"
                    android:id="@+id/img_ViewHomePage_Filter" />
                <TextView
                    android:text="Lọc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ViewHomePage_Filter"
                    android:textColor="@color/clWhite"
                    android:textAlignment="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="2dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="gone"
            android:id="@+id/ln_ViewListWorkflow_Search">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="5dp"
                android:layout_margin="0.5dp">
                <RelativeLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/relativeLayout2"
                    android:background="@color/clGrayNavigator">
                    <ImageView
                        android:src="@drawable/icon_delete"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:id="@+id/img_ListWorkflowView_Search_Delete"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:tint="@color/clBottomDisable"
                        android:layout_marginRight="3dp"
                        android:padding="7dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/edt_ListWorkflowView_Search"
                        android:layout_toLeftOf="@+id/img_ListWorkflowView_Search_Delete"
                        android:layout_toRightOf="@+id/img_ListWorkflowView_Search"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text16"
                        android:textStyle="italic"
                        android:paddingLeft="8dp"
                        android:paddingRight="5dp"
                        android:lines="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:inputType="text"
                        android:textColor="@android:color/background_dark"
                        android:hint="Tìm kiếm..."
                        android:textColorHint="@color/clBottomDisable"
                        android:background="@android:color/transparent" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:gravity="center_vertical"
                android:background="@drawable/drawable_tabbackground">
                <TextView
                    android:text="Đến tôi (0)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ViewHomePage_VDT"
                    android:background="@drawable/drawable_tabselected"
                    android:textColor="@color/clVer2BlueMain"
                    android:textSize="@dimen/text14"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"/>
                <TextView
                    android:text="Tôi bắt đầu (0)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ViewHomePage_VTBD"
                    android:background="@drawable/drawable_tabnotselected"
                    android:textColor="@color/clWhite"
                    android:textSize="@dimen/text14"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/clGrayNavigator2"
        android:alpha="0.3"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_ViewHomePage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ln_ViewHomePage_Content"
                android:weightSum="10">

                <BPMOPMobile.Droid.Class.MyCustomViewPager
                    android:id="@+id/pager_ViewHomePage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/clGrayNavigator"
                    android:id="@+id/ln_ViewHomePage_BottomNavigation" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ln_ViewHomePage_BlackFilter"
                android:background="@color/clBlack"
                android:alpha="0.5"
                android:visibility="gone"/>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ln_ViewHomePage_DisablePager"
                android:background="@color/transparent"
                android:visibility="gone"/>
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
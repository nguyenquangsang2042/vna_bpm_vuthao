<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/ln_PopupVer2FilterBoard_TopBlur"/>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clWhite">

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:weightSum="4">
            <TextView
                android:text="Hôm nay"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_PopupVer2FilterBoard_Today"
                android:textAlignment="center"
                android:textColor="@color/clBottomDisable"
                android:textSize="@dimen/text16"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:text="Hôm qua"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_PopupVer2FilterBoard_Yesterday"
                android:textAlignment="center"
                android:textColor="@color/clBottomDisable"
                android:textSize="@dimen/text16"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:text="7 ngày"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_PopupVer2FilterBoard_7Days"
                android:textAlignment="center"
                android:textColor="@color/clBottomDisable"
                android:textSize="@dimen/text16"
                android:layout_weight="1"
                android:gravity="center"/>
            <TextView
                android:text="30 ngày"
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_PopupVer2FilterBoard_30Days"
                android:textAlignment="center"
                android:textColor="@color/clBottomDisable"
                android:textSize="@dimen/text16"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/clGray"
            android:id="@+id/view1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/clGray"
            android:id="@+id/view2" />

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_PopupHomePageFilter_NgayGuiDen">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Ngày tạo"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_PopupVer2FilterBoard_NgayTao"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="@dimen/text14"
                    android:textStyle="bold"
                    android:textColor="@color/clBlack"/>
                <ImageView
                    android:src="@drawable/icon_backdefault"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:visibility="gone"
                    android:id="@+id/img_PopupVer2FilterBoard_Default" />
            </LinearLayout>
            <LinearLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout1"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout1"
                    android:weightSum="2">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/textcornerstrokegray"
                        android:id="@+id/ln_PopupVer2FilterBoard_NgayTao_TuNgay">

                        <TextView
                            android:text="Từ ngày"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/tv_PopupVer2FilterBoard_NgayTao_TuNgay"
                            android:textAlignment="textStart"
                            android:textColor="@color/clBottomDisable"
                            android:textSize="@dimen/text13"
                            android:layout_weight="1"
                            android:paddingTop="5dp"
                            android:paddingLeft="10dp"
                            android:paddingBottom="5dp"/>
                        <ImageView
                            android:src="@drawable/icon_ver2_calendar"
                            android:id="@+id/img_PopupVer2FilterBoard_NgayTao_TuNgay"
                            android:tint="@color/clGraytitle"
                            android:padding="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/textcornerstrokegray"
                        android:id="@+id/ln_PopupVer2FilterBoard_NgayTao_DenNgay">

                        <TextView
                            android:text="Đến ngày"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/tv_PopupVer2FilterBoard_NgayTao_DenNgay"
                            android:textAlignment="textStart"
                            android:textColor="@color/clBottomDisable"
                            android:textSize="@dimen/text13"
                            android:layout_weight="1"
                            android:paddingTop="5dp"
                            android:paddingLeft="10dp"
                            android:paddingBottom="5dp"/>
                        <ImageView
                            android:src="@drawable/icon_ver2_calendar"
                            android:id="@+id/img_PopupVer2FilterBoard_NgayTao_DenNgay"
                            android:tint="@color/clGraytitle"
                            android:padding="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Tình trạng"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_PopupVer2FilterBoard_TinhTrang"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="@dimen/text14"
                    android:textStyle="bold"
                    android:textColor="@color/clBlack"/>
                <ImageView
                    android:src="@drawable/icon_backdefault"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:visibility="gone"
                    android:id="@+id/img_PopupVer2FilterBoard_Default" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:text="Tất cả"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_PopupVer2FilterBoard_TinhTrang_TatCa"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/clBottomDisable"
                    android:textSize="@dimen/text13"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textcornergray"/>
                <TextView
                    android:text="Chờ phê duyệt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_PopupVer2FilterBoard_TinhTrang_ChoPheDuyet"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/clBottomDisable"
                    android:textSize="@dimen/text13"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textcornergray"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:text="Đã phê duyệt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_PopupVer2FilterBoard_TinhTrang_DaPheDuyet"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/clBottomDisable"
                    android:textSize="@dimen/text13"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textcornergray"/>
                <TextView
                    android:text="Từ chối"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_PopupVer2FilterBoard_TinhTrang_TuChoi"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/clBottomDisable"
                    android:textSize="@dimen/text13"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/textcornergray"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rela_PopupHomePageFilter_ApDung"
            android:layout_marginBottom="10dp">
            <TextView
                android:text="Áp dụng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_PopupVer2FilterBoard_ApDung"
                android:layout_marginRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="@dimen/text12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/textcornerviolet2"
                android:backgroundTint="@color/clVer2BlueMain"
                android:textColor="@color/clWhite"/>
            <TextView
                android:text="Thiết lập lại"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_PopupVer2FilterBoard_MacDinh"
                android:layout_marginRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textStyle="italic"
                android:textSize="@dimen/text12"
                android:layout_toLeftOf="@+id/tv_PopupVer2FilterBoard_ApDung"
                android:textColor="@color/clVer2BlueMain"/>

            <RelativeLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/clWhite"
                android:id="@+id/rela_PopupVer2FilterBoard_TuNgay">
                <com.telerik.widget.calendar.RadCalendarView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:visibility="visible"
                    android:id="@+id/calendar_PopupVer2FilterBoard_TuNgay" />
                <ImageView
                    android:id="@+id/img_PopupVer2FilterBoard_TuNgay_Delete"
                    android:src="@drawable/icon_delete"
                    android:tint="@color/clActionRed"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/img_PopupVer2FilterBoard_TuNgay_Today"
                    android:layout_toLeftOf="@+id/img_PopupVer2FilterBoard_TuNgay_Delete"
                    android:src="@drawable/icon_ver3_calendar_today"
                    android:tint="@color/clViolet"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                    android:background="@color/clWhite"
                android:id="@+id/rela_PopupVer2FilterBoard_NgayTao_DenNgay">
                <com.telerik.widget.calendar.RadCalendarView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:visibility="visible"
                    android:id="@+id/calendar_PopupVer2FilterBoard_DenNgay" />
                <ImageView
                    android:id="@+id/img_PopupVer2FilterBoard_DenNgay_Delete"
                    android:src="@drawable/icon_delete"
                    android:tint="@color/clActionRed"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
                <ImageView
                    android:id="@+id/img_PopupVer2FilterBoard_DenNgay_Today"
                    android:layout_toLeftOf="@+id/img_PopupVer2FilterBoard_DenNgay_Delete"
                    android:src="@drawable/icon_ver3_calendar_today"
                    android:tint="@color/clViolet"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/clGray"/>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_weight="1"
        android:background="@color/clBlack"
        android:alpha="0.5"
        android:id="@+id/ln_PopupVer2FilterBoard_BottomBlur"/>
</LinearLayout>
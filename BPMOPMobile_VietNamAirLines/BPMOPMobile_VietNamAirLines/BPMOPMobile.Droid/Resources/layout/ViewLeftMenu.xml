
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clWhite">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/linearLayout_top"
        android:weightSum="10"
        android:gravity="center">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="10">

            <refractored.controls.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewLeftMenu_Avata"
                android:backgroundTint="#00000000"
                android:tint="#00000000"
                android:padding="3dp"
                android:src="@drawable/icon_avatar64"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:layout_marginRight="10dp">

                <TextView
                    android:text="Hoàng Đăng Khoa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ViewLeftMenu_Name"
                    android:textColor="@color/clBlack"
                    android:textSize="@dimen/text16"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"/>
                <TextView
                    android:text="khoahd@vuthao.com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ViewLeftMenu_Email"
                    android:textColor="@color/clBottomDisable"
                    android:textSize="@dimen/text13"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="Xin chào !"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ViewLeftMenu_Welcome"
            android:gravity="center_vertical"
            android:textColor="@color/clBlack"
            android:textSize="@dimen/text16"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/clGray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="1"
            android:id="@+id/ln_ViewLeftMenu_HomePage"
            android:foreground="?attr/selectableItemBackground">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:id="@+id/view_ViewLeftMenu_HomePage"
                android:background="@color/clBottomEnable"/>
            <ImageView
                android:src="@drawable/icon_ver2_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewLeftMenu_HomePage"
                android:layout_gravity="center_vertical"
                android:padding="9dp"
                android:layout_marginLeft="10dp"
                android:tint="@color/clBottomEnable"/>
            <TextView
                android:text="Trang chủ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_ViewLeftMenu_HomePage"
                android:gravity="center_vertical"
                android:textColor="@color/clBottomEnable"
                android:textSize="@dimen/text14"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:tag="K_Home" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="1"
            android:weightSum="1"
            android:id="@+id/ln_ViewLeftMenu_VDT"
            android:foreground="?attr/selectableItemBackground">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:id="@+id/view_ViewLeftMenu_VDT"
                android:background="@color/clWhite"/>
            <ImageView
                android:src="@drawable/icon_ver4_tome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewLeftMenu_VDT"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:tint="@color/clBottomDisable"
                android:padding="9dp" />
            <TextView
                android:text="Đến tôi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_ViewLeftMenu_VDT"
                android:gravity="center_vertical"
                android:textColor="@color/clBottomDisable"
                android:textSize="@dimen/text14"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:tag="K_Request" />
            <TextView
                android:id="@+id/tv_ViewLeftMenu_VDTCount"
                android:text="20"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/clVer2BlueMain"
                android:textSize="@dimen/text14"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="1"
            android:weightSum="1"
            android:id="@+id/ln_ViewLeftMenu_VTBD"
            android:foreground="?attr/selectableItemBackground">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:id="@+id/view_ViewLeftMenu_VTBD"
                android:background="@color/clWhite"/>
            <ImageView
                android:src="@drawable/icon_ver4_fromme"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewLeftMenu_VTBD"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:tint="@color/clBottomDisable"
                android:padding="9dp" />
            <TextView
                android:text="Tôi bắt đầu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_ViewLeftMenu_VTBD"
                android:gravity="center_vertical"
                android:textColor="@color/clBottomDisable"
                android:textSize="@dimen/text14"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:tag="K_Approve" />
            <TextView
                android:id="@+id/tv_ViewLeftMenu_VTBDCount"
                android:text="20"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/clVer2BlueMain"
                android:textSize="@dimen/text14"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="1"
            android:weightSum="1"
            android:id="@+id/ln_ViewLeftMenu_Follow"
            android:foreground="?attr/selectableItemBackground">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:id="@+id/view_ViewLeftMenu_Follow"
                android:background="@color/clWhite"/>
            <ImageView
                android:src="@drawable/icon_follow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewLeftMenu_Follow"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:tint="@color/clBottomDisable"
                android:padding="9dp" />
            <TextView
                android:text="Theo dõi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_ViewLeftMenu_Follow"
                android:gravity="center_vertical"
                android:textColor="@color/clBottomDisable"
                android:textSize="@dimen/text14"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:tag="K_Approve" />
            <TextView
                android:id="@+id/tv_ViewLeftMenu_FollowCount"
                android:text="20"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/clVer2BlueMain"
                android:textSize="@dimen/text14"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
          <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="1"
            android:weightSum="1"
            android:id="@+id/ln_ViewLeftMenu_Meeting"
            android:visibility="visible"
            android:foreground="?attr/selectableItemBackground">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_ViewLeftMenu_Meeting"
                android:background="@color/clWhite"/>
            <ImageView
                android:src="@drawable/icon_ver2_calendar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewLeftMenu_Meeting"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:tint="@color/clBottomDisable"
                android:padding="9dp" />
            <TextView
                android:text="Lịch họp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_ViewLeftMenu_Meeting"
                android:gravity="center_vertical"
                android:textColor="@color/clBottomDisable"
                android:textSize="@dimen/text14"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:tag="K_Approve" />
            <TextView
                android:id="@+id/tv_ViewLeftMenu_MeetingCount"
                android:text="20"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="@color/clRed"
                android:textSize="@dimen/text14"
                android:textStyle="bold"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="gone"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="1"
            android:weightSum="1"
            android:id="@+id/ln_ViewLeftMenu_Board"
            android:visibility="visible"
            android:foreground="?attr/selectableItemBackground">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_ViewLeftMenu_Board"
                android:background="@color/clWhite"/>
            <ImageView
                android:src="@drawable/icon_ver3_app"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewLeftMenu_Board"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:tint="@color/clBottomDisable"
                android:padding="9dp" />
            <TextView
                android:text="Ứng dụng"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_ViewLeftMenu_Board"
                android:gravity="center_vertical"
                android:textColor="@color/clBottomDisable"
                android:textSize="@dimen/text14"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:tag="K_Approve" />
            <TextView
                android:id="@+id/tv_ViewLeftMenu_BoardCount"
                android:text="20"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="@color/clRed"
                android:textSize="@dimen/text14"
                android:textStyle="bold"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="gone"/>
        </LinearLayout>
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:id="@+id/ln_ViewLeftMenu_App"
            android:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:minWidth="0px"
                android:minHeight="0px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:id="@+id/recy_ViewLeftMenu_App" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/clGray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="1"
            android:weightSum="1">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_ViewLeftMenu_AppInfo"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/clWhite"/>
            <ImageView
                android:src="@drawable/icon_ver2_appinfo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewLeftMenu_InforApp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/tv_ViewLeftMenu_InfoApp"
                android:text="Thông tin ứng dụng"
                android:layout_width="231.0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/clBottomDisable"
                android:textSize="@dimen/text14"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:tag="K_About" />
            <TextView
                android:text="v.1.0.0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_ViewLeftMenu_InforApp"
                android:gravity="center_vertical"
                android:textColor="@color/clVer2BlueMain"
                android:textSize="@dimen/text14"
                android:layout_marginRight="20dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="1"
            android:weightSum="1">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_ViewLeftMenu_Language"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/clWhite"/>
            <ImageView
                android:src="@drawable/icon_ver2_language"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewLeftMenu_Language"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:padding="10dp" />
            <TextView
                android:text="Tiếng Việt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/tv_ViewLeftMenu_Language"
                android:textColor="@color/clBottomDisable"
                android:textSize="@dimen/text14"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:tag="K_Language" />
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:id="@+id/sw_ViewLeftMenu_Language"
                android:checked="false"
                android:textOff="VN"
                android:textOn="EN"
                android:showText="true"
                android:switchTextAppearance="@style/SwitchTextAppearance"
                android:thumb="@drawable/selectorLanguage"
                android:track="@drawable/selectorTrack"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/clGray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_weight="1"
            android:id="@+id/ln_ViewLeftMenu_Logout"
            android:foreground="?attr/selectableItemBackground">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:id="@+id/view_ViewLeftMenu_Logout"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/clWhite"/>
            <ImageView
                android:src="@drawable/icon_ver2_logout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewLeftMenu_SignOut"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:padding="10dp" />
            <TextView
                android:text="Đăng xuất"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ViewLeftMenu_SignOut"
                android:gravity="center_vertical"
                android:textColor="@color/clActionRed"
                android:textSize="@dimen/text14"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:tag="K_Logout" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:src="@drawable/img_background_leftmenu"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>
        <android.webkit.WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/web_ViewLeftMenu_Advertisement"
            android:visibility="gone"
            android:layout_margin="10dp"/>

    </LinearLayout>
</LinearLayout>
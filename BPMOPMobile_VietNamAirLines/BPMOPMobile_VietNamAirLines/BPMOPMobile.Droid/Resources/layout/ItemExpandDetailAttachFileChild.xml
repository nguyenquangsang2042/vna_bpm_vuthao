
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ln_ItemExpandDetailAttachFileGroup">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginLeft="5dp">
            <ImageView
                android:src="@drawable/icon_pdffile"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_ItemExpandDetailAttachFileGroup_Extension" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0.1dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/ln_ItemExpandDetailAttachFileGroup_Name">
            <TextView
                android:text="Text Hợp đồng.pdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/clBottomEnable"
                android:textSize="@dimen/text14"
                android:maxLines="1"
                android:id="@+id/tv_ItemExpandDetailAttachFileGroup_Name" />
            <TextView
                android:text="Text 8.78 MB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/clGraytitle"
                android:textSize="@dimen/text11"
                android:maxLines="1"
                android:id="@+id/tv_ItemExpandDetailAttachFileGroup_Size" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/ln_ItemExpandDetailAttachFileGroup_Category">
            <TextView
                android:text="Text Hợp đồng / phụ lục của hợp đồng abcdef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/clBlack"
                android:textSize="@dimen/text14"
                android:maxLines="1"
                android:id="@+id/tv_ItemExpandDetailAttachFileGroup_Category" />
                        <TextView
                android:text="Text 8.78 MB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/clGraytitle"
                android:textSize="@dimen/text11"
                android:maxLines="1"
                android:id="@+id/tv_ItemExpandDetailAttachFileGroup_Size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
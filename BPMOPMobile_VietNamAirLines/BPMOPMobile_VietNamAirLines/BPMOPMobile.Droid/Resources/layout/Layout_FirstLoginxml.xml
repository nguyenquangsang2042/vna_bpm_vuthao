<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/bottomviewmain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/backgroud1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="100dp"
            android:src="@drawable/logovna"
            android:layout_width="wrap_content"
            android:layout_height="120dp"/>
        <LinearLayout
            android:id="@+id/lnbuttonSigninSignup"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:minWidth="25px"
                android:minHeight="25px"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:padding="0.2dp"
                android:id="@+id/btnSignUp"
                android:background="@drawable/textloginstartview"
                android:backgroundTint="#fff">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:fontFamily="san-serif-light"
                    android:text="Register"
                    android:textColor="#000"
                    android:background="@drawable/textloginstartview"
                    android:backgroundTint="#fff"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:minWidth="25px"
                android:minHeight="25px"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:padding="0.2dp"
                android:id="@+id/btnSignIn"
                android:background="@drawable/textloginstartview"
                android:backgroundTint="#C9982A">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:fontFamily="san-serif-light"
                    android:text="Login"
                    android:textColor="@color/clWhite"
                    android:background="@drawable/textloginstartview"
                    android:backgroundTint="#C9982A"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                />
            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/icon_phonex2"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView     
                android:id="@+id/callhotline"
                android:textColor="#fff"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeStepGranularity="12sp"
                android:layout_marginLeft="5dp"
                android:text="1900 1100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/icon_facebook"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView
                android:id="@+id/openFacebokVNA"
                android:textColor="#fff"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeStepGranularity="12sp"
                android:layout_marginLeft="5dp"
                android:text="vietnamairlines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:src="@drawable/iconweb"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView
                android:id="@+id/openWebVNA"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeStepGranularity="12sp"
                android:text="www.vietnamairlines.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>

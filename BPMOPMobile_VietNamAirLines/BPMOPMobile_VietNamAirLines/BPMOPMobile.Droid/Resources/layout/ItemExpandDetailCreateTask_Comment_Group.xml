
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@android:color/background_light"
    android:minWidth="25px"
    android:minHeight="25px">
    <View
        android:minHeight="0px"
        android:minWidth="0px"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"
        android:id="@+id/vw_ItemExpandDetailCreateTask_Comment_Group_MarginTop" />
    <TextView
        android:text="Bình luận"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text12"
        android:textColor="@color/clBlack"
        android:textStyle="bold"
        android:id="@+id/tv_ItemExpandDetailCreateTask_Comment_Group_Title"/>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="0px"
        android:minHeight="0px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/ln_ItemExpandDetailCreateTask_Comment_Group_ParentComment"
        android:background="@drawable/textcornerstrokegraywhitesolid2">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_margin="10dp">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Vui lòng nhập bình luận tại đây"
                android:inputType="textMultiLine"
                android:lines="3"
                android:id="@+id/edt_ItemExpandDetailCreateTask_Comment_Group_ParentComment"
                android:gravity="top"
                android:textSize="@dimen/text14"
                android:layout_weight="10"
                android:background="@color/transparent"/>
            <ImageView
                android:src="@drawable/icon_ver2_attach"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img_ItemExpandDetailCreateTask_Comment_Group_ParentComment_Attach"
                android:padding="2dp"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:src="@drawable/icon_ver2_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img_ItemExpandDetailCreateTask_Comment_Group_ParentComment_Comment"
                android:padding="0dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <BPMOPMobile.Droid.Class.CustomFlexBoxRecyclerView
            android:minWidth="0px"
            android:minHeight="0px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/recy_ItemExpandDetailCreateTask_Comment_Group_ParentComment_Attach" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <View
            android:minHeight="0px"
            android:minWidth="0px"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/vw_ItemExpandDetailCreateTask_Comment_Group_MarginLeft" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_ItemExpandDetailCreateTask_Comment_Group_ContentClick">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:id="@+id/ln_ItemExpandDetailCreateTask_Comment_Group_ItemComment">

                <RelativeLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:id="@+id/rela_ItemChildExpandListFlow_Avatar">

                    <refractored.controls.CircleImageView
                        android:layout_centerHorizontal="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/img_ItemExpandDetailCreateTask_Comment_Group_Avata"
                        android:backgroundTint="#00000000"
                        android:tint="#00000000"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#ffffffff"
                        android:src="@drawable/icon_avatar64"/>
                    <TextView
                        android:text="TP"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="3dp"
                        android:background="@drawable/textcircleviolet"
                        android:textColor="@color/clWhite"
                        android:textSize="@dimen/text16"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/tv_ItemExpandDetailCreateTask_Comment_Group_Avata" />
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:layout_marginRight="2dp"
                            android:weightSum="10">
                            <TextView
                                android:text="Text Tuấn Phạm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBlack"
                                android:textSize="@dimen/text14"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_weight="10"
                                android:id="@+id/tv_ItemExpandDetailCreateTask_Comment_Group_Name"/>
                            <TextView
                                android:text="Text 18/03/97 12:00"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBottomDisable"
                                android:textSize="@dimen/text12"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginLeft="5dp"
                                android:id="@+id/tv_ItemExpandDetailCreateTask_Comment_Group_Date"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:layout_marginTop="3dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:layout_marginRight="10dp"
                            android:gravity="center">
                            <TextView
                                android:text="Text nhân viên kinh doanh "
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBottomDisable"
                                android:textSize="@dimen/text12"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:id="@+id/tv_ItemExpandDetailCreateTask_Comment_Group_Position"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp"
                            android:id="@+id/ln_ItemExpandDetailCreateTask_Comment_Group_Attach">
                            <ImageView
                                android:src="@drawable/icon_ver2_attach"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginRight="5dp"
                                android:id="@+id/img_ItemExpandDetailCreateTask_Comment_Group_Attach"
                                android:layout_centerVertical="true" />
                            <TextView
                                android:text="5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBottomDisable"
                                android:textSize="@dimen/text12"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:id="@+id/tv_ItemExpandDetailCreateTask_Comment_Group_AttachCount"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:id="@+id/ln_ItemExpandDetailCreateTask_Comment_Group_Like">
                            <ImageView
                                android:src="@drawable/icon_ver2_heart"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginRight="5dp"
                                android:id="@+id/img_ItemExpandDetailCreateTask_Comment_Group_Heart"
                                android:layout_centerVertical="true" />
                            <TextView
                                android:text="5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBottomDisable"
                                android:textSize="@dimen/text12"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:id="@+id/tv_ItemExpandDetailCreateTask_Comment_Group_LikeCount"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="0px"
                        android:minHeight="0px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">
                        <TextView
                            android:text="Text Em xem lại giấy tờ hợp đồng công ty TNHH BVF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/clBlack"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text14"
                            android:gravity="left"
                            android:ellipsize="end"
                            android:visibility="visible"
                            android:id="@+id/tv_ItemExpandDetailCreateTask_Comment_Group_Comment"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="0px"
                        android:minHeight="0px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        android:id="@+id/ln_ItemExpandDetailCreateTask_Comment_Group_Action">
                        <TextView
                            android:text="Thích"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/clBottomDisable"
                            android:textSize="@dimen/text12"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:id="@+id/tv_ItemExpandDetailCreateTask_Comment_Group_Like"/>
                        <TextView
                            android:text=" - "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/clBottomDisable"
                            android:textSize="@dimen/text12"
                            android:gravity="left"
                            android:maxLines="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:ellipsize="end"
                            android:id="@+id/tv_ItemExpandDetailCreateTask_Comment_Group_Posisation"/>
                        <TextView
                            android:text="Trả lời"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/clBottomDisable"
                            android:textSize="@dimen/text12"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:id="@+id/tv_ItemExpandDetailCreateTask_Comment_Group_Reply"/>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:minWidth="0px"
                        android:minHeight="0px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recy_ItemExpandDetailCreateTask_Comment_Group_Attach"
                        android:visibility="visible"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
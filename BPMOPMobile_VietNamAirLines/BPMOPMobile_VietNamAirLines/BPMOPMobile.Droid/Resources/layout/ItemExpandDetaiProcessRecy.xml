
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:minWidth="25px"
    android:minHeight="25px">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/ln_ItemChildExpandListFlow_Avatar">
            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/view_ItemExpandDetaiProcessRecy_Top"
                android:background="@color/clGray"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/view_ItemExpandDetaiProcessRecy_Top"
                android:id="@+id/view_ItemExpandDetaiProcessRecy_Bottom"
                android:background="@color/clGray"/>
            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/view_ItemExpandDetaiProcessRecy_Right"
                android:background="@color/clGray"/>
            <ImageView
                android:src="@drawable/icon_expandrecy"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="12dp"
                android:id="@+id/imageView1" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ln_ItemChildExpandListFlow_All"
                android:layout_marginRight="2dp">

                <RelativeLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/ln_ItemChildExpandListFlow_Avatar">
                    <refractored.controls.CircleImageView
                        android:layout_centerHorizontal="true"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/img_ItemExpandDetaiProcessRecy_Avata"
                        android:backgroundTint="#00000000"
                        android:tint="#00000000"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#ffffffff"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_avatar64"/>
                    <TextView
                        android:text="TP"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="3dp"
                        android:background="@drawable/textcircleviolet"
                        android:textColor="@color/clWhite"
                        android:textSize="@dimen/text16"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:id="@+id/tv_ItemExpandDetaiProcessRecy_Avata" />

                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ln_ItemChildExpandListFlow_Content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:layout_marginRight="2dp">
                            <TextView
                                android:text="Text Tuấn Phạm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBlack"
                                android:textSize="@dimen/text14"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:id="@+id/tv_ItemExpandDetaiProcessRecy_Name"/>
                            <TextView
                                android:text="- Text trường phòng"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBottomDisable"
                                android:textSize="@dimen/text14"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginLeft="5dp"
                                android:id="@+id/tv_ItemExpandDetaiProcessRecy_Position"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:weightSum="10">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:layout_marginRight="2dp"
                            android:gravity="center">
                            <TextView
                                android:text="Text 18/03/97 12:00"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBottomDisable"
                                android:textSize="@dimen/text12"
                                android:gravity="left"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:id="@+id/tv_ItemExpandDetaiProcessRecy_Date"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="50dp"
                            android:minHeight="25px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp">
                            <TextView
                                android:text="Text Đã duyệt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/clBlack"
                                android:textSize="@dimen/text12"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:layout_centerVertical="true"
                                android:layout_margin="3dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:background="@drawable/textcornerred"
                                android:id="@+id/tv_ItemExpandDetaiProcessRecy_Action"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp">
                        <TextView
                            android:text="Đã bổ sung rồi Đã bổ sung rồi Đã bổ sung rồi Đã bổ sung rồi Đã bổ sung rồi Đã bổ sung rồi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/clBlack"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/text14"
                            android:gravity="left"
                            android:ellipsize="end"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/tv_ItemExpandDetaiProcessRecy_YKien"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
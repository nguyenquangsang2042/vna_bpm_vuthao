<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:id="@+id/frame_StartView_VNA_Ver2_Login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:background="@color/clWhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:id="@+id/imgcovera"
                android:src="@drawable/img_vnaPlaneLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:singleLine="true"
                    android:fontFamily="san-serif-light"
                    android:hint="Tên đăng nhập"
                    android:paddingRight="13dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/icon_vna_user"
                    android:id="@+id/edt_ViewStartView_VNAirlines_Username"
                    android:textSize="@dimen/textsize"
                    android:background="@drawable/border_radius_white"/>
                <EditText
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="san-serif-light"
                    android:text=""
                    android:background="@drawable/border_radius_white"
                    android:paddingRight="13dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/icon_vna_lock"
                    android:id="@+id/edt_ViewStartView_VNAirlines_Pass"
                    android:hint="Mật khẩu"
                    android:maxLength="50"
                    android:password="true"
                    android:singleLine="true"
                    android:imeOptions="actionGo"
                    android:alpha="1"
                    android:textSize="@dimen/textsize" />
                <Button
                    android:id="@+id/btn_ViewStartView_VNAirlines_SignIn"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/clWhite"
                    android:text="Sign in"
                    android:background="@drawable/border_button_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_Note_Login"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerHorizontal="true"
                    android:text="Đang kiểm tra..."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ViewStartView_VNAirlines_Note_Login"
                    android:textColor="#006885"
                    android:gravity="center"
                    android:textSize="@dimen/titlesize" />
                <ProgressBar
                    android:id="@+id/process_Login"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/frame_StartView_VNA_Ver2_Autologin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/backgroud1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/ImgViewlogoVNa"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/logovna"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_StartView_Loading"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/background_light"
                android:alpha="0.7"
                android:layout_gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:text="Đang kiểm tra..."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_ViewStartView_VNAirlines_Note_AutoLogin"
                        android:textColor="#006885"
                        android:gravity="center"
                        android:textSize="@dimen/titlesize" />
                    <ProgressBar
                        android:id="@+id/process_AutoLogin"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>

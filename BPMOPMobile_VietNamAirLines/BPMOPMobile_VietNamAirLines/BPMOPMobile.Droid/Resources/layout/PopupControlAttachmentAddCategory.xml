
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/textcornerwhite2">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:gravity="center_vertical">
            <TextView
                android:text="Tên file"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_PopupControlAttachmentAddCategory_Name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/text16"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:visibility="visible"
                android:layout_weight="10"/>
            <ImageView
                android:src="@drawable/icon_check"
                android:tint="@color/clActionGreen"
                android:padding="7dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_PopupControlAttachmentAddCategory_Accept"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"/>
            <ImageView
                android:src="@drawable/icon_close"
                android:tint="@color/clRed"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_PopupControlAttachmentAddCategory_Close"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <TextView
            android:text="Text Hợp đồng mua căn chung cư A.pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_PopupControlAttachmentAddCategory_Name"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="@dimen/text14"
            android:textStyle="italic"
            android:textColor="@color/clBottomEnable"
            android:visibility="visible" />
        <TextView
            android:text="Loại tài liệu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_PopupControlAttachmentAddCategory_Category"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text16"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:visibility="visible" />
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:weightSum="10"
            android:background="@drawable/textcornerstrokegray">

            <TextView
                android:text="Text Hợp đồng mua căn chung cư A.pdf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:id="@+id/tv_PopupControlAttachmentAddCategory_Category"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text14"
                android:textStyle="italic"
                android:padding="10dp"
                android:textColor="@color/clBottomEnable"
                android:visibility="visible" />
            <ImageView
                android:src="@drawable/icon_tab_triangle"
                android:tint="@color/clGraytitle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:padding="7dp"
                android:id="@+id/img_PopupControlAttachmentAddCategory_Category" />

        </LinearLayout>
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/lv_PopupControlAttachmentAddCategory_Category"
            android:layout_marginLeft="20dp"
            android:visibility="invisible"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@android:color/background_light"
    android:minWidth="25px"
    android:minHeight="25px">
    <View
        android:minHeight="0px"
        android:minWidth="0px"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"
        android:id="@+id/vw_ItemExpandDetaiProcessGroup_MarginTop" />
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp">
            <ImageView
                android:src="@drawable/icon_circle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="7dp"
                android:padding="1dp"
                android:id="@+id/img_ItemExpandDetaiProcessGroup" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/textcircleviolet"
                android:textSize="@dimen/text16"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="7dp"
                android:gravity="center"
                android:id="@+id/tv_ItemChildExpandListFlow_Avatar"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_ItemChildExpandListFlow_All"
            android:layout_marginRight="2dp"
            android:weightSum="10">
            <TextView
                android:text="Text Tạo phiếu đề xuất"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/clBlack"
                android:textSize="@dimen/text14"
                android:gravity="left"
                android:maxLines="1"
                android:textStyle="bold"
                android:ellipsize="end"
                android:id="@+id/tv_ItemExpandDetaiProcessGroup_Title"
                android:layout_weight="10"/>
            <TextView
                android:text="Text Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ItemExpandDetaiProcessGroup_Status"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/text14"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

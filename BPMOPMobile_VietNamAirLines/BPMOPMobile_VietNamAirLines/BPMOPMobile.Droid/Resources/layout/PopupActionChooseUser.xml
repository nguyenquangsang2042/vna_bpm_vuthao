<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/textcornerwhite2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout1">
            <TextView
                android:text="Ý kiến"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_PopupActionChooseUser_YKien"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/text16"
                android:fontFamily="@font/robotolight"
                android:textColor="@android:color/black"
                android:visibility="visible" />
            <ImageView
                android:src="@mipmap/icon_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_PopupActionChooseUser_Close"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:tint="@color/clHint"
                android:layout_centerVertical="false" />
        </RelativeLayout>
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/relativeLayout2"
            android:background="@drawable/edtcornerstrokegray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <ImageView
                android:src="@mipmap/icon_close"
                android:layout_width="35dp"
                android:id="@+id/img_PopupActionChooseUser_Delete"
                android:layout_centerVertical="true"
                android:tint="@android:color/darker_gray"
                android:layout_height="35dp"
                android:padding="10dp"
                android:visibility="visible"
                android:layout_alignParentRight="true" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/robotoregular"
                android:id="@+id/edt_PopupActionChooseUser"
                android:layout_toLeftOf="@+id/img_PopupActionChooseUser_Delete"
                android:gravity="center_vertical"
                android:textSize="@dimen/textsize"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@android:color/background_dark"
                android:hint="Tìm kiếm..."
                android:textColorHint="@color/clHint"
                android:background="@null"  />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ln_PopupActionChooseUser_User">
            <ListView
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_PopupActionChooseUser"
                android:paddingBottom="30dp" />
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_PopupActionChooseUser_YKien"
            android:fontFamily="@font/robotoregular"
            android:background="@drawable/edtcornerstrokegray"
            android:textSize="14sp"
            android:lines="6"
            android:padding="10dp"
            android:maxLines="6"
            android:gravity="top"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:hint="Nhập ý kiến" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="right"
            android:id="@+id/ln_PopupActionChooseUser_Action"
            android:paddingBottom="10dp">
            <TextView
                android:text="Thoát"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_PopupActionChooseUser_Huy"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/clRed"
                android:textSize="@dimen/text16"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:paddingBottom="6dp"
                android:paddingTop="6dp" />
            <TextView
                android:text="Hoàn tất"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_PopupActionChooseUser_Gui"
                android:fontFamily="@font/robotoregular"
                android:textColor="@android:color/background_light"
                android:background="@drawable/textcornerviolet2"
                android:textSize="@dimen/text16"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

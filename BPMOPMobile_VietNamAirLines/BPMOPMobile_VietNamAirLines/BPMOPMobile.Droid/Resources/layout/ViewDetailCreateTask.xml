
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clWhite"
    android:id="@+id/ln_ViewDetailCreateTask_All">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/rela_ViewDetailCreateTask_Toolbar"
            android:background="@color/clWhite">
            <ImageView
                android:src="@drawable/icon_back30"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_ViewDetailCreateTask_Back"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:tint="@color/clBottomDisable" />
            <ImageView
                android:src="@drawable/icon_bpm_btn_action_11"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:id="@+id/img_ViewDetailCreateTask_Done"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:tint="@color/clBottomDisable"/>
            <ImageView
                android:src="@drawable/icon_ver2_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="2dp"
                android:id="@+id/img_ViewDetailCreateTask_ChildTask"
                android:layout_toLeftOf="@+id/img_ViewDetailCreateTask_Done"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:tint="@color/clBottomDisable"/>
            <ImageView
                android:src="@drawable/icon_ver2_donetask"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="2dp"
                android:id="@+id/img_ViewDetailCreateTask_DoneTask"
                android:layout_toLeftOf="@+id/img_ViewDetailCreateTask_ChildTask"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:tint="@color/clBottomDisable"/>
            <ImageView
                android:src="@drawable/icon_ver2_trash"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="2dp"
                android:id="@+id/img_ViewDetailCreateTask_DeleteTask"
                android:layout_toLeftOf="@+id/img_ViewDetailCreateTask_DoneTask"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:tint="@color/clBottomDisable"
                android:visibility="gone"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@+id/img_ViewDetailCreateTask_Back"
                android:layout_toLeftOf="@+id/img_ViewDetailCreateTask_DeleteTask">
                <ImageView
                    android:src="@drawable/icon_ver2_task"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/img_ViewDetailCreateTask_Name"
                    android:layout_marginRight="5dp"
                    android:padding="9dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:tint="@color/clBottomDisable"/>
                <TextView
                    android:text="Phân công công việc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_ViewDetailCreateTask_Name"
                    android:textColor="@color/clVer2BlueMain"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text16"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1" />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.3"
            android:background="@color/clGrayNavigator2"/>
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:id="@+id/ln_ViewDetailCreateTask_Data">

                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/ln_ViewDetailCreateTask_SubToolbar">

                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:id="@+id/ln_ViewDetailCreateTask_ChiTiet">
                        <TextView
                            android:text="Chi tiết"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:textSize="@dimen/text14"
                            android:textColor="@color/clBlack"
                            android:textStyle="bold"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tv_ViewDetailCreateTask_ChiTiet" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="2dp"                          
                            android:background="@drawable/textcornergray"
                            android:backgroundTint="@color/clVer2BlueMain"
                            android:id="@+id/vw_ViewDetailCreateTask_ChiTiet"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/ln_ViewDetailCreateTask_CongViecCon">
                        <TextView
                            android:text="Công việc con"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:gravity="left"
                            android:textSize="@dimen/text14"
                            android:textColor="@color/clBottomDisable"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tv_ViewDetailCreateTask_CongViecCon" />
                        <View
                           android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/textcornergray"
                            android:backgroundTint="@color/clVer2BlueMain"
                            android:visibility="invisible"
                            android:id="@+id/vw_ViewDetailCreateTask_CongViecCon"/>
                    </LinearLayout>

                </LinearLayout>
                <ScrollView
                    android:minWidth="0px"
                    android:minHeight="0px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="vertical"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:layout_marginTop="5dp"
                            android:visibility="visible"
                            android:id="@+id/ln_ViewDetailCreateTask_ChiTiet_Content">

                            <LinearLayout
                                android:orientation="vertical"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="Tiêu đề (*)"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/clGraytitle"
                                    android:textSize="@dimen/text13"
                                    android:gravity="left"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:id="@+id/tv_ViewDetailCreateTask_TieuDe"/>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:minWidth="25px"
                                    android:minHeight="35dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/ln_ViewDetailCreateTask_TieuDe_Content"
                                    android:background="@drawable/drawable_shadow"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:text=""
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/clBlack"
                                        android:textSize="@dimen/text14"
                                        android:gravity="left"
                                        android:paddingTop="7dp"
                                        android:paddingBottom="7dp"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:id="@+id/tv_ViewDetailCreateTask_TieuDe_Content"/>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">
                                <TextView
                                    android:text="Người xử lý (*)"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/clGraytitle"
                                    android:textSize="@dimen/text13"
                                    android:gravity="left"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:id="@+id/tv_ViewDetailCreateTask_NguoiXuLy"/>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:minWidth="25px"
                                    android:minHeight="35dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/drawable_shadow"
                                    android:id="@+id/ln_ViewDetailCreateTask_NguoiXuLy_Content"
                                    android:layout_marginTop="10dp">
                                    <FrameLayout
                                         android:minWidth="25px"
                                        android:minHeight="25px"
                                        android:layout_weight="10"
                                        android:paddingLeft="3dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                     <BPMOPMobile.Droid.Class.CustomFlexBoxRecyclerView
                                       
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/recy_ViewDetailCreateTask_NguoiXuLy"
                                        />
                                    <View
                                            android:id="@+id/viewBlurRecycleUseChoose"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"/>
                                    </FrameLayout>
                                    <ImageView
                                        android:src="@drawable/icon_ver2_user"
                                        android:layout_width="35dp"
                                        android:id="@+id/img_ViewDetailCreateTask_NguoiXuLy"
                                        android:layout_height="35dp"
                                        android:padding="8dp"
                                        android:layout_gravity="center_vertical"/>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                android:layout_marginTop="10dp">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:minWidth="25px"
                                    android:minHeight="25px"
                                    android:layout_width="0.1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginRight="5dp">
                                    <TextView
                                        android:text="Hạn hoàn tất"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/clGraytitle"
                                        android:textSize="@dimen/text13"
                                        android:gravity="left"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:id="@+id/tv_ViewDetailCreateTask_HanHoanTat"/>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:minWidth="25px"
                                        android:minHeight="35dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/ln_ViewDetailCreateTask_HanHoanTat_Content"
                                        android:background="@drawable/drawable_shadow"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center_vertical"
                                        android:weightSum="10">
                                        <TextView
                                            android:text=""
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:textColor="@color/clBlack"
                                            android:textSize="@dimen/text14"
                                            android:gravity="center_vertical"
                                            android:paddingTop="7dp"
                                            android:paddingBottom="7dp"
                                            android:paddingLeft="5dp"
                                            android:paddingRight="5dp"
                                            android:maxLines="1"
                                            android:ellipsize="end"
                                            android:id="@+id/tv_ViewDetailCreateTask_HanHoanTat_Content"
                                            android:layout_weight="10"/>
                                        <ImageView
                                            android:src="@drawable/icon_ver2_calendar"
                                            android:id="@+id/img_ViewDetailCreateTask_HanHoanTat_Content"
                                            android:tint="@color/clGraytitle"
                                            android:padding="5dp"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_marginRight="5dp"/>
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:minWidth="25px"
                                    android:minHeight="25px"
                                    android:layout_width="0.1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="5dp">
                                    <TextView
                                        android:text="Tình trạng"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/clGraytitle"
                                        android:textSize="@dimen/text13"
                                        android:gravity="left"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:id="@+id/tv_ViewDetailCreateTask_TinhTrang"/>
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:minWidth="25px"
                                        android:minHeight="35dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/ln_ViewDetailCreateTask_TinhTrang_Content"
                                        android:background="@drawable/drawable_shadow"
                                        android:layout_marginTop="10dp"
                                        android:gravity="center_vertical">
                                        <TextView
                                            android:text=""
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/clBlack"
                                            android:textSize="@dimen/text14"
                                            android:gravity="left"
                                            android:paddingTop="7dp"
                                            android:paddingBottom="7dp"
                                            android:paddingLeft="5dp"
                                            android:paddingRight="5dp"
                                            android:maxLines="1"
                                            android:ellipsize="end"
                                            android:id="@+id/tv_ViewDetailCreateTask_TinhTrang_Content"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:id="@+id/ln_ViewDetailCreateTask_NguoiGiao">
                                <TextView
                                    android:text="Người giao"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/clGraytitle"
                                    android:textSize="@dimen/text13"
                                    android:gravity="left"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:id="@+id/tv_ViewDetailCreateTask_NguoiGiao"/>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:minWidth="25px"
                                    android:minHeight="35dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/ln_ViewDetailCreateTask_NguoiGiao_Content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:text="dasda"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/clBlack"
                                        android:textSize="@dimen/text14"
                                        android:gravity="left"
                                        android:paddingTop="7dp"
                                        android:paddingBottom="7dp"
                                        android:paddingRight="5dp"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:id="@+id/tv_ViewDetailCreateTask_NguoiGiao_Content"/>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">
                                <TextView
                                    android:text="Nội dung"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/clGraytitle"
                                    android:textSize="@dimen/text13"
                                    android:gravity="left"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:id="@+id/tv_ViewDetailCreateTask_NoiDung"/>
                                <RelativeLayout
                                    android:minWidth="25px"
                                    android:minHeight="25px"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:minWidth="25px"
                                        android:minHeight="35dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:id="@+id/ln_ViewDetailCreateTask_NoiDung_Content"
                                        android:background="@drawable/drawable_shadow"
                                        android:gravity="center_vertical"
                                        android:padding="5dp">
                                        <jp.wasabeef.richeditor.RichEditor
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/richEditor_ViewDetailCreateTask_NoiDung_Content"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:minWidth="25px"
                                        android:minHeight="25px"
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:id="@+id/ln_ViewDetailCreateTask_NoiDung_ContentClick"
                                        android:layout_marginRight="0.0dp"
                                        android:layout_marginTop="0.0dp"
                                        android:layout_marginLeft="0.0dp" />

                                </RelativeLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:minWidth="0px"
                                android:minHeight="0px"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/ln_ViewDetailCreateTask_AttachFile">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:minWidth="25px"
                                    android:minHeight="25px"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="10"
                                    android:gravity="center"
                                    android:visibility="visible">
                                    <TextView
                                        android:text="Text Tài liệu đính kèm"
                                        android:layout_width="0.1dp"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text13"
                                        android:textStyle="bold"
                                        android:textColor="@color/clBlack"
                                        android:id="@+id/tv_ViewDetailCreateTask_AttachFile"
                                        android:layout_weight="10"/>
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:minWidth="25px"
                                        android:minHeight="25px"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:id="@+id/ln_ViewDetailCreateTask_AttachFile_TaoMoi">
                                        <ImageView
                                            android:src="@drawable/icon_ver2_addfile"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:id="@+id/img_ViewDetailCreateTask_AttachFile_TaoMoi" />
                                        <TextView
                                            android:text="Text Tạo mới"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/text13"
                                            android:textColor="@color/clBottomDisable"
                                            android:id="@+id/tv_ViewDetailCreateTask_AttachFile_TaoMoi"
                                            android:layout_marginLeft="5dp"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <android.support.v7.widget.CardView
                                    android:minWidth="25px"
                                    android:minHeight="25px"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    card_view:cardUseCompatPadding="true"
                                    card_view:cardCornerRadius="5dp">
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:minWidth="25px"
                                        android:minHeight="25px"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:minWidth="25px"
                                            android:minHeight="25px"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:weightSum="10"
                                            android:background="@color/clGrayNavigator"
                                            android:paddingLeft="6dp"
                                            android:paddingRight="6dp"
                                            android:paddingTop="12dp"
                                            android:paddingBottom="12dp"
                                            android:visibility="visible">
                                            <TextView
                                                android:text="Text Tài liệu đính kèm"
                                                android:layout_width="0.1dp"
                                                android:layout_height="match_parent"
                                                android:textSize="@dimen/text12"
                                                android:textStyle="bold"
                                                android:textColor="@color/clBlack"
                                                android:id="@+id/tv_ViewDetailCreateTask_AttachFile_Child1"
                                                android:layout_weight="6.5"
                                                android:maxLines="1"
                                                android:padding="5dp"/>
                                            <TextView
                                                android:text="Text Người tạo"
                                                android:layout_width="0.1dp"
                                                android:layout_height="match_parent"
                                                android:textSize="@dimen/text12"
                                                android:textStyle="bold"
                                                android:textColor="@color/clBlack"
                                                android:id="@+id/tv_ViewDetailCreateTask_AttachFile_Child2"
                                                android:layout_weight="3.5"
                                                android:maxLines="1"
                                                android:padding="5dp"/>
                                        </LinearLayout>
                                        <android.support.v7.widget.RecyclerView
                                            android:minWidth="0px"
                                            android:minHeight="0px"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/recy_ViewDetailCreateTask_AttachFile"
                                            android:visibility="visible"/>
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:id="@+id/ln_ViewDetailCreateTask_CongViecCon_Content"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:minWidth="0px"
                            android:minHeight="0px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ln_ViewDetailCreateTask_Comment"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <LinearLayout


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textcornerwhite2">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/clWhite"
            android:id="@+id/ln_PopupAction_ChooseUserAndAction_ChooseUser"
            android:weightSum="10"
            android:visibility="gone">
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:src="@drawable/icon_back_new"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="12dp"
                    android:id="@+id/img_PopupAction_ChooseUserAndAction_ChooseUser_Close"
                    android:tint="@color/clBottomDisable"/>
                <ImageView
                    android:src="@drawable/icon_bpm_btn_action_1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible"
                    android:id="@+id/img_PopupAction_ChooseUserAndAction_ChooseUser_Accept" />
                <TextView
                    android:text="Chia sẻ cho người / nhóm khác xem yêu cầu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/clVer2BlueMain"
                    android:textSize="@dimen/text15"
                    android:gravity="center"
                    android:id="@+id/tv_PopupAction_ChooseUserAndAction_ChooseUser_Title"
                    android:layout_toRightOf="@+id/img_PopupAction_ChooseUserAndAction_ChooseUser_Close"
                    android:layout_toLeftOf="@+id/img_PopupAction_ChooseUserAndAction_ChooseUser_Accept"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/clGrayNavigator2"/>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone">
                <ImageView
                    android:src="@drawable/icon_ver2_user"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:padding="10dp"
                    android:id="@+id/img_PopupAction_ChooseUserAndAction_ChooseUser" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/clGrayNavigator2"/>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:src="@drawable/icon_ver2_search"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tint="@color/clGraytitle"
                        android:padding="8dp"
                        android:visibility="gone"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_PopupAction_ChooseUserAndAction_ChooseUser_Search"
                        android:fontFamily="@font/fontarial"
                        android:background="@android:color/transparent"
                        android:textSize="14sp"
                        android:lines="5"
                        android:padding="10dp"
                        android:maxLines="5"
                        android:gravity="top"
                        android:textColorHint="@color/clGraytitle"
                        android:hint="Nhập ý kiến"
                        android:inputType="text"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/clGrayNavigator2"/>
                <android.support.v7.widget.RecyclerView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/recy_PopupAction_ChooseUserAndAction_ChooseUser" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/ln_PopupAction_ChooseUserAndAction_Action"
            android:visibility="visible"
            android:background="@drawable/textcornerwhite2">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/clWhite"
                android:id="@+id/ln_PopupAction_ChooseUserAndAction"
                android:weightSum="10"
                android:visibility="visible">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <ImageView
                        android:src="@drawable/icon_check"
                        android:layout_width="30dp"
                        android:layout_height="45dp"
                        android:padding="5dp"
                        android:id="@+id/img_PopupAction_ChooseUserAndAction_Action" />
                    <TextView
                        android:text="Đồng ý phê duyệt yêu cầu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/clBlack"
                        android:textSize="@dimen/text15"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_PopupAction_ChooseUserAndAction_Action_Title"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:id="@+id/view1"
                    android:background="@color/clGrayNavigator2"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edtcornerstrokegray"
                    android:id="@+id/ln_PopupAction_ChooseUserAndAction_Action_User"
                    android:layout_marginTop="10dp"
                    android:weightSum="10">
                    <android.support.v7.widget.RecyclerView
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:visibility="gone"
                        android:id="@+id/recy_PopupAction_ChooseUserAndAction_Action_User" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="0.1dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:layout_weight="10">
                        <TextView
                            android:text="Chọn người để thực hiện"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:textColor="@color/clBottomDisable"
                            android:textSize="@dimen/text14"
                            android:textStyle="italic"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="10"
                            android:layout_marginLeft="15dp"
                            android:id="@+id/tv_PopupAction_ChooseUserAndAction_Action_PleaseChooseUser"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:weightSum="10"
                            android:padding="3dp"
                            android:alpha="1"
                            android:visibility="gone"
                            android:id="@+id/ln_PopupAction_ChooseUserAndAction_Action_SelectedUser">
                            <RelativeLayout
                                android:orientation="vertical"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:id="@+id/ln_ItemChooseMultiUser_Avatar">
                                <TextView
                                    android:text="TP"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:textColor="@color/clWhite"
                                    android:textSize="@dimen/text16"
                                    android:layout_margin="2dp"
                                    android:layout_centerInParent="true"
                                    android:gravity="center"
                                    android:background="@drawable/textcircleviolet"
                                    android:id="@+id/tv_PopupAction_ChooseUserAndAction_Action_Avatar"
                                    android:visibility="visible"/>
                                <Refractored.Controls.CircleImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:id="@+id/img_PopupAction_ChooseUserAndAction_Action_Avatar"
                                    android:background="@color/clWhite"
                                    android:padding="3dp"
                                    android:backgroundTint="#00000000"
                                    android:tint="#00000000"
                                    android:src="@drawable/icon_avatar64"
                                    android:layout_centerInParent="true"
                                    android:visibility="gone"/>
                            </RelativeLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="0.1dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="10"
                                android:weightSum="10">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:minWidth="25px"
                                    android:minHeight="25px"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="10"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:text="Text Đăng ký công tác tại Thành Phố Hồ Chí Minh"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/clBlack"
                                        android:textSize="@dimen/text14"
                                        android:gravity="left"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_weight="10"
                                        android:id="@+id/tv_PopupAction_ChooseUserAndAction_Action_UserName"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:minWidth="25px"
                                    android:minHeight="25px"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="10"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:text="Text DX-1517/2020"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/clGraytitle"
                                        android:textSize="@dimen/text12"
                                        android:gravity="left"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_weight="10"
                                        android:id="@+id/tv_PopupAction_ChooseUserAndAction_Action_Email"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:src="@drawable/icon_ver2_user"
                        android:layout_width="35dp"
                        android:id="@+id/img_PopupAction_ChooseUserAndAction_Action_User"
                        android:layout_height="35dp"
                        android:padding="8dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edt_PopupAction_ChooseUserAndAction_Action_Comment"
                    android:background="@drawable/edtcornerstrokegray"
                    android:textSize="@dimen/text14"
                    android:padding="10dp"
                    android:gravity="top"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:hint="Vui lòng nhập ý kiến (*)"
                    android:minLines="6"
                    android:inputType="textMultiLine"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:id="@+id/ln_ChooseUser_Action"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:text="Thoát"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_PopupAction_ChooseUserAndAction_Action_Close"
                        android:textColor="@color/clRed"
                        android:textSize="@dimen/text14"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="40dp"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp" />
                    <TextView
                        android:text="Hoàn tất"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_PopupAction_ChooseUserAndAction_Action_Done"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/textcornerviolet2"
                        android:backgroundTint="@color/clVer2BlueMain"
                        android:textSize="@dimen/text14"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
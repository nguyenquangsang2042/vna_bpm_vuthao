<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <LinearLayout
      android:orientation="vertical"
      android:minWidth="25px"
      android:minHeight="25px"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/textcornerwhite2"
      android:layout_margin="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/clWhite"
        android:id="@+id/ln_PopupAction_CreateAssignTask"
        android:weightSum="10"
        android:visibility="visible">
      <LinearLayout
          android:orientation="horizontal"
          android:minWidth="25px"
          android:minHeight="25px"
          android:layout_width="match_parent"
          android:layout_height="45dp">
        <ImageView
            android:src="@drawable/icon_bpm_btn_action_8"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:id="@+id/img_PopupAction_CreateAssignTask" />
        <TextView
            android:text="Tạo và phân công việc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/clBlack"
            android:textSize="@dimen/text15"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_PopupAction_CreateAssignTask_title"/>
      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:id="@+id/view1"
          android:background="@color/clGrayNavigator2"/>
      <LinearLayout
          android:orientation="vertical"
          android:minWidth="25px"
          android:minHeight="25px"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_PopupAction_CreateAssignTask_TaskName"
            android:background="@drawable/edtcornerstrokegray"
            android:textSize="14sp"
            android:lines="5"
            android:padding="10dp"
            android:maxLines="1"
            android:gravity="top"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/clGraytitle"
            android:hint="Tên việc"
            android:ellipsize="end"
            android:inputType="text"/>
        <LinearLayout
                    android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edtcornerstrokegray"
            android:layout_marginTop="10dp"
            android:weightSum="10">
          <android.support.v7.widget.RecyclerView
              android:minWidth="25px"
              android:minHeight="25px"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="10"
              android:id="@+id/recy_PopupAction_CreateAssignTask_User" />
          <ImageView
              android:src="@drawable/icon_ver2_user"
              android:layout_width="35dp"
              android:id="@+id/img_PopupAction_CreateAssignTask_User"
              android:layout_height="35dp"
              android:padding="10dp"
              android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="10"
            android:background="@drawable/edtcornerstrokegray"
               android:id="@+id/ln_PopupAction_CreateAssignTask_Date">
          <TextView
              android:text="Hạn hoàn tất"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/tv_PopupAction_CreateAssignTask_Date"
              android:textColor="@color/clGraytitle"
              android:textSize="@dimen/text14"
              android:layout_weight="10"
              android:gravity="left"/>
          <ImageView
              android:src="@drawable/icon_ver2_calendar"
              android:layout_width="20dp"
              android:id="@+id/img_PopupAction_CreateAssignTask_Date"
              android:layout_height="20dp"
              android:padding="2dp"
              android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_PopupAction_CreateAssignTask_Comment"
            android:background="@drawable/edtcornerstrokegray"
            android:textSize="14sp"
            android:lines="5"
            android:padding="10dp"
            android:maxLines="5"
            android:gravity="top"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/clGraytitle"
            android:hint="Nhập ý kiến"
            android:inputType="textMultiLine"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:id="@+id/ln_PopupAction_CreateAssignTask_Action"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp">
          <TextView
              android:text="Thoát"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_PopupAction_CreateAssignTask_Huy"
              android:textColor="@color/clRed"
              android:textSize="@dimen/text14"
              android:layout_gravity="center"
              android:gravity="center"
              android:layout_marginRight="20dp"
              android:paddingBottom="6dp"
              android:paddingTop="6dp" />
          <TextView
              android:text="Hoàn tất"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_PopupAction_CreateAssignTask_HoanTat"
              android:textColor="@android:color/background_light"
              android:background="@drawable/textcornerviolet2"
              android:textSize="@dimen/text14"
              android:layout_gravity="center"
              android:gravity="center"
              android:paddingTop="7dp"
              android:paddingBottom="7dp"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"/>
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>

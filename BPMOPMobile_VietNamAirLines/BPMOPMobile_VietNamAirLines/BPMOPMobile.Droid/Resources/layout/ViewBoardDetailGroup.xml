
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/rela_ViewBoardDetailGroup_Toolbar"
        android:background="@color/clViolet">
        <ImageView
            android:src="@drawable/icon_back30"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_ViewBoardDetailGroup_Back"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:tint="@android:color/background_light" />
        <TextView
            android:text="Text Biên bản hợp đồng quản lý sản phẩm xuất nhập ngoại"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_ViewBoardDetailGroup_Name"
            android:textColor="@android:color/background_light"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text16"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/img_ViewBoardDetailGroup_Back"
            android:layout_toLeftOf="@id/rela_ViewBoardDetailGroup_Toolbar"
            android:gravity="center"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1" />
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.widget.SwipeRefreshLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/swipe_ViewBoardDetailGroup">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="10"
                        android:id="@+id/linearLayout1">
                        <RelativeLayout
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="0.1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:id="@+id/relativeLayout2"
                            android:background="@drawable/textcornerstrokegray"
                            android:backgroundTint="@color/clGrayNavigator"
                            android:layout_margin="5dp">
                            <ImageView
                                android:src="@drawable/icon_ver2_search"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:id="@+id/img_ViewBoardDetailGroup_Search"
                                android:layout_centerVertical="true"
                                android:tint="@color/clBottomDisable"
                                android:padding="7dp"
                                android:layout_marginLeft="5dp"/>
                            <ImageView
                                android:src="@drawable/icon_delete"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:id="@+id/img_ViewBoardDetailGroup_Search_Delete"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:tint="@color/clBottomDisable"
                                android:layout_marginRight="3dp"
                                android:padding="7dp" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/edt_ViewBoardDetailGroup_Search"
                                android:layout_toLeftOf="@+id/img_ViewBoardDetailGroup_Search_Delete"
                                android:layout_toRightOf="@+id/img_ViewBoardDetailGroup_Search"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/text16"
                                android:paddingLeft="10dp"
                                android:paddingRight="5dp"
                                android:lines="1"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textStyle="italic"
                                android:inputType="text"
                                android:textColor="@android:color/background_dark"
                                android:hint="Tìm kiếm..."
                                android:textColorHint="@color/clBottomDisable"
                                android:background="@android:color/transparent" />

                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/textcornerstrokegray"
                            android:backgroundTint="@color/clGrayNavigator"
                            android:id="@+id/ln_ViewBoardDetailGroup_Filter"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp">
                            <ImageView
                                android:src="@drawable/icon_ver2_filter"
                                android:padding="10dp"
                                android:tint="@color/clActionBlack"
                                android:layout_width="35dp"
                                android:layout_height="35dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/clGrayNavigator2"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:weightSum="2">
                        <RelativeLayout
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="0.1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/rela_ViewBoardDetailGroup_Board">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_centerInParent="true"
                                android:id="@+id/ln_ViewBoardDetailGroup_Board">
                                <ImageView
                                    android:src="@drawable/icon_ver2_board"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:tint="@color/clBottomEnable"
                                    android:id="@+id/img_ViewBoardDetailGroup_Board"/>
                                <TextView
                                    android:text="Board"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="left"
                                    android:textSize="@dimen/text13"
                                    android:textColor="@color/clBottomDisable"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/tv_ViewBoardDetailGroup_Board" />
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_below="@+id/ln_ViewBoardDetailGroup_Board"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/clBottomEnable"
                                android:id="@+id/vw_ViewBoardDetailGroup_Board"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/clGrayNavigator2"/>
                        <RelativeLayout
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="0.1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/rela_ViewBoardDetailGroup_List">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:id="@+id/ln_ViewBoardDetailGroup_List"
                                android:gravity="center">
                                <ImageView
                                    android:src="@drawable/icon_ver2_list"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:id="@+id/img_ViewBoardDetailGroup_List"
                                    android:tint="@color/clBoardDetailGreen"/>
                                <TextView
                                    android:text="List"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="left"
                                    android:textSize="@dimen/text13"
                                    android:textColor="@color/clBottomDisable"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/tv_ViewBoardDetailGroup_List" />
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_below="@+id/ln_ViewBoardDetailGroup_List"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/clBottomEnable"
                                android:id="@+id/vw_ViewBoardDetailGroup_List"
                                android:visibility="invisible"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:visibility="gone"
                            android:background="@color/clGrayNavigator2"/>
                        <RelativeLayout
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="0.1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:id="@+id/rela_ViewBoardDetailGroup_Report">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:id="@+id/ln_ViewBoardDetailGroup_Report"
                                android:gravity="center">
                                <ImageView
                                    android:src="@drawable/icon_ver2_report"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:id="@+id/img_ViewBoardDetailGroup_Report"
                                    android:tint="@color/clBoardDetailBlue"/>
                                <TextView
                                    android:text="Report"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="left"
                                    android:textSize="@dimen/text13"
                                    android:textColor="@color/clBottomDisable"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:layout_gravity="center_vertical"
                                    android:id="@+id/tv_ViewBoardDetailGroup_Report" />
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_below="@+id/ln_ViewBoardDetailGroup_Report"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/clBottomEnable"
                                android:id="@+id/vw_ViewBoardDetailGroup_Report"
                                android:visibility="invisible"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.SwipeRefreshLayout>

            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ln_ViewBoardDetailGroup_Content">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:id="@+id/view1"
                        android:background="@color/clGrayNavigator2"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="10">

                        <RelativeLayout
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_weight="10"
                            android:id="@+id/rela_ViewBoardDetailGroup_Data_Board">
                            <BPMOPMobile.Droid.Class.MyCustomBoardView
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/boardView_ViewBoardDetailGroup"
                                android:background="@color/clWhite"/>
                            <LinearLayout
                                android:id="@+id/ln_ViewBoardDetailGroup_Data_Board_NoData"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/clWhite"
                                android:gravity="center"
                                android:visibility="gone">
                                <TextView
                                    android:text="Không có dữ liệu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_ViewBoardDetailGroup_Data_Board_NoData"
                                    android:fontFamily="@string/text_light"
                                    android:textColor="@color/clBottomDisable"
                                    android:gravity="center"
                                    android:textStyle="italic"
                                    android:textSize="@dimen/text18"
                                    android:padding="10dp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_weight="10"
                            android:id="@+id/rela_ViewBoardDetailGroup_Data_List">
                            <android.support.v7.widget.RecyclerView
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:nestedScrollingEnabled="true"
                                android:visibility="gone"
                                android:id="@+id/recy_ViewBoardDetailGroup_List" />
                            <LinearLayout
                                android:id="@+id/ln_ViewBoardDetailGroup_Data_List_NoData"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/clWhite"
                                android:gravity="center"
                                android:visibility="gone">
                                <TextView
                                    android:text="Không có dữ liệu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_ViewBoardDetailGroup_Data_List_NoData"
                                    android:fontFamily="@string/text_light"
                                    android:textColor="@color/clBottomDisable"
                                    android:gravity="center"
                                    android:textStyle="italic"
                                    android:textSize="@dimen/text18"
                                    android:padding="10dp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_weight="10"
                            android:id="@+id/rela_ViewBoardDetailGroup_Data_Report">
                            <android.support.v7.widget.RecyclerView
                                android:minWidth="25px"
                                android:minHeight="25px"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:nestedScrollingEnabled="true"
                                android:visibility="gone"
                                android:id="@+id/recy_ViewBoardDetailGroup_Report" />
                            <LinearLayout
                                android:id="@+id/ln_ViewBoardDetailGroup_Data_Report_NoData"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/clWhite"
                                android:gravity="center"
                                android:visibility="gone">
                                <TextView
                                    android:text="Không có dữ liệu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_ViewBoardDetailGroup_Data_Report_NoData"
                                    android:fontFamily="@string/text_light"
                                    android:textColor="@color/clBottomDisable"
                                    android:gravity="center"
                                    android:textStyle="italic"
                                    android:textSize="@dimen/text18"
                                    android:padding="10dp" />
                            </LinearLayout>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/clGrayNavigator2"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:id="@+id/ln_ViewBoardDetailGroup_BottomNavigation"
                            android:weightSum="4"
                            android:background="@color/clGrayNavigator">
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ln_ViewBoardDetailGroup_BlackFilter"
            android:background="@color/clBlack"
            android:alpha="0.5"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
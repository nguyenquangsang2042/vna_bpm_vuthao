
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:weightSum="10">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/relativeLayout1"
        android:background="@color/clViolet">
        <ImageView
            android:src="@drawable/icon_back30"
            android:padding="10dp"
            android:tint="@color/clWhite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/img_ViewCreateWorkflowDetail_Back" />
    </RelativeLayout>
        <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rela_ViewDetailProcess_TaskName"
        android:background="@color/clGray"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:text="Text Yêu cầu phê duyệt Đề xuất công tác tại Hà Nội #110268"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:textSize="@dimen/text15"
            android:textColor="@color/clBlack"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/tv_ViewCreateWorkflowDetail_Title" />
    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ln_ViewCreateWorkflowDetail_Data">


            <ExpandableListView
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:nestedScrollingEnabled="false"
                android:id="@+id/expand_ViewCreateWorkflowDetail_Data"/>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ln_ViewCreateWorkflowDetail_FlowRelated" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:id="@+id/view1"
                android:background="@color/clGrayNavigator2"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/ln_ViewCreateWorkflowDetail_ActionAll"
                android:background="@color/clGrayNavigator"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="10dp">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_ViewCreateWorkflowDetail_NoData"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/clWhite"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:src="@drawable/icon_nodata"
                android:layout_width="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/imageView1"
                android:layout_height="50dp"
                android:tint="@color/clHint"
                android:visibility="gone"/>
            <TextView
                android:text="Không có dữ liệu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ViewCreateWorkflowDetail_NoData"
                android:fontFamily="@string/text_light"
                android:textColor="@color/clBottomDisable"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="@dimen/text18"
                android:padding="10dp" />
        </LinearLayout>
</LinearLayout>
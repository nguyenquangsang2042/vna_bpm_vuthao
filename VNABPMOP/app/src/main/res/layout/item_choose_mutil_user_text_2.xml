<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ln_ItemChooseMultiUser_Text2_All"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:orientation="horizontal"
        android:paddingLeft="0dp">

        <TextView
            android:id="@+id/tv_ItemChooseMultiUser_Text2_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLength="30"
            android:maxLines="1"
            android:text="Text Hoàng Đăng Khoa"
            android:textColor="@color/clBlack"
            android:textSize="@dimen/text14" />

        <ImageView
            android:id="@+id/tv_ItemChooseMultiUser_Text2_Delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="7dp"
            android:src="@drawable/icon_delete"
            android:tint="@color/clActionRed"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
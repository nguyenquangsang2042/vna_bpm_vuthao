<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:id="@+id/ln_ViewDetailAttachFile_All">

    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/relativeLayout1"
        android:background="@color/clWhite">
        <ImageView
            android:src="@drawable/icon_back30"
            android:padding="10dp"
            android:tint="@color/clBottomDisable"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:id="@+id/img_ViewDetailAttachFile_Back" />
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">
            <ImageView
                android:src="@drawable/icon_ver2_attach"
                android:padding="9dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/img_FlowApprovee_Flow"
                android:tint="@color/clBottomDisable"/>
            <TextView
                android:text="Tài liệu đính kèm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ViewDetailAttachFile_Title"
                android:textColor="@color/clVer2BlueMain"
                android:textSize="@dimen/text16"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.3"
        android:background="@color/clGrayNavigator2"/>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="0px"
        android:minHeight="0px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rela_ViewDetailAttachFile_TaskName"
        android:background="@color/clGray"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone">
        <TextView
            android:text="Text Yêu cầu phê duyệt Đề xuất công tác tại Hà Nội #110268"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textSize="@dimen/text15"
            android:textColor="@color/clBlack"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/tv_ViewDetailAttachFile_Name" />
    </LinearLayout>
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ln_ViewDetailAttachFile_Dynamic">
        </LinearLayout>
    </ScrollView>
</LinearLayout>
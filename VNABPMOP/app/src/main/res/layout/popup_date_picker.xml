
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/clActionBlack"
            android:alpha="0.95"
            android:visibility="gone"/>
        <RelativeLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7"
            android:layout_margin="10dp"
            android:background="@drawable/textcornerwhite2"
            android:backgroundTint="@color/clWhite"
            android:layout_centerInParent="true">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textcornerwhite2"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">
                <CalendarView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:visibility="visible"
                    android:layout_marginTop="10dp"
                    android:id="@+id/Calendar_PopupControl_DatePicker_Ver2" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/rela_ViewDetailWorkflow_Toolbar">
                <ImageView
                    android:src="@drawable/icon_ver3_close2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/img_PopupControl_DatePicker_Ver2_Close"
                    android:padding="11dp"
                    android:layout_alignParentRight="true"/>
                <ImageView
                    android:id="@+id/img_PopupControl_DatePicker_Ver2_Delete"
                    android:src="@drawable/icon_ver3_delete"
                    android:tint="@color/clActionRed"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toLeftOf="@+id/img_PopupControl_DatePicker_Ver2_Close"/>
                <ImageView
                    android:id="@+id/img_PopupControl_DatePicker_Ver2_Today"
                    android:layout_toLeftOf="@+id/img_PopupControl_DatePicker_Ver2_Delete"
                    android:src="@drawable/icon_ver3_calendar_today"
                    android:tint="@color/clViolet"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
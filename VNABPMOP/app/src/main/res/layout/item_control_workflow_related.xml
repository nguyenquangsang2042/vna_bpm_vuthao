<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_ItemControlFlowRelated_All"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clWhite"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ln_ItemControlFlowRelated_Content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:minWidth="25px"
        android:minHeight="25px"
        android:orientation="horizontal">

        <View
            android:id="@+id/view_ItemControlFlowRelated_LeftSelected"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/clBottomEnable"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:alpha="1"
                android:minWidth="25px"
                android:minHeight="25px"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="10">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_ItemControlFlowRelated_Avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:background="@color/clTransparent"
                    android:padding="3dp"
                    android:src="@drawable/icon_avatar64"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="0.1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="10"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/tv_ItemControlFlowRelated_Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="1"
                            android:text="Text Đăng ký công tác tại Thành Phố Hồ Chí Minh"
                            android:textColor="@color/clBlack"
                            android:textSize="@dimen/text15" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/tv_ItemControlFlowRelated_Description"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="1"
                            android:text="Text DX-1517/2020"
                            android:textColor="@color/clBottomDisable"
                            android:textSize="@dimen/text12" />

                        <TextView
                            android:id="@+id/tv_ItemControlFlowRelated_Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="1"
                            android:text="12:00 18/03/1997"
                            android:textColor="@color/clBottomDisable"
                            android:textSize="@dimen/text12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_ItemControlFlowRelated_Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/textcornerred"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:paddingLeft="7dp"
                            android:paddingTop="3dp"
                            android:paddingRight="7dp"
                            android:paddingBottom="3dp"
                            android:text="Text Đã duyệt"
                            android:textColor="@color/clBlack"
                            android:textSize="@dimen/text12" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_ItemControlFlowRelated_Checked"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@drawable/icon_tab_delete_2"
                        android:tint="@color/clActionRed" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/clGrayNavigator"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
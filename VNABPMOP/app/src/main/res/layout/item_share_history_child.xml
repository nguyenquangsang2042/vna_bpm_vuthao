<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ln_ItemShareHistory_Child_All">

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ln_ItemShareHistory_Child_Content"
        android:paddingTop="1dp"
        android:paddingBottom="1dp">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:weightSum="10"
                android:padding="3dp"
                android:alpha="1">
                <RelativeLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/ln_ItemShareHistory_Child_Avatar">
                    <TextView
                        android:text="TP"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textColor="@color/clWhite"
                        android:textSize="@dimen/text16"
                        android:layout_margin="2dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:background="@drawable/textcircleviolet"
                        android:id="@+id/tv_ItemShareHistory_Child_Avatar"
                        android:visibility="visible"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/img_ItemShareHistory_Child_Avatar"
                        android:background="@color/clWhite"
                        android:padding="3dp"
                        android:backgroundTint="#00000000"
                        android:tint="#00000000"
                        android:src="@drawable/icon_avatar64"
                        android:layout_centerInParent="true"
                        android:visibility="gone"/>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="0.1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="10"
                    android:weightSum="10">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:gravity="center_vertical">
                        <TextView
                            android:text="Text Hoàng Đăng Khoa"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/clBlack"
                            android:textSize="@dimen/text14"
                            android:gravity="left"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="10"
                            android:id="@+id/tv_ItemShareHistory_Child_Title"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:text="Text @khoahoang - cntt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/clGraytitle"
                            android:textSize="@dimen/text12"
                            android:gravity="left"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_weight="10"
                            android:id="@+id/tv_ItemShareHistory_Child_Email"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
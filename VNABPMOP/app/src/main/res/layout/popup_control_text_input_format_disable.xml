<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rela_ViewDetailWorkflow_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/img_PopupControl_InputTextFormat_Close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_back_new"
            android:tint="@color/clBottomDisable" />

        <TextView
            android:id="@+id/tv_PopupControl_InputTextFormat_Title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/img_PopupControl_InputTextFormat_Done"
            android:layout_toRightOf="@+id/img_PopupControl_InputTextFormat_Close"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:text="Việc đến tôi"
            android:textColor="@color/clVer2BlueMain"
            android:textSize="@dimen/text16" />

        <ImageView
            android:id="@+id/img_PopupControl_InputTextFormat_Done"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/icon_check"
            android:tint="@color/clActionGreen"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_PopupControl_InputTextFormat_Delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/img_PopupControl_InputTextFormat_Done"
            android:padding="8dp"
            android:src="@drawable/icon_ver3_delete"
            android:tint="@color/clActionRed"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:id="@+id/view_ItemHomePageToDoList_Category"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/clGrayNavigator2" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/txtDetailInDisable"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>
</LinearLayout>

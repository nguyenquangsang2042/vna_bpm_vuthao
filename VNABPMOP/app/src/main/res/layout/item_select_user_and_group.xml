<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_ItemSelectUserAndGroup_All"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ln_ItemSelectUserAndGroup_Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:orientation="horizontal"
        android:paddingTop="1dp"
        android:paddingBottom="1dp">

        <View
            android:id="@+id/view_ItemSelectUserAndGroup_LeftSelected"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/clBottomEnable"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:alpha="1"
                android:minWidth="25px"
                android:minHeight="25px"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="10">

                <RelativeLayout
                    android:id="@+id/ln_ItemSelectUserAndGroup_Avatar"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_ItemSelectUserAndGroup_Avatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="2dp"
                        android:background="@drawable/textcircleviolet"
                        android:gravity="center"
                        android:text="TP"
                        android:textColor="@color/clWhite"
                        android:textSize="@dimen/text16"
                        android:visibility="visible" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_ItemSelectUserAndGroup_Avatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:background="@color/clWhite"
                        android:backgroundTint="#00000000"
                        android:padding="3dp"
                        android:src="@drawable/icon_avatar64"
                        android:tint="#00000000"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/tv_ItemSelectUserAndGroup_Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="2"
                            android:text="Text Đăng ký công tác tại Thành Phố Hồ Chí Minh"
                            android:textColor="@color/clBlack"
                            android:textSize="@dimen/text14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:minWidth="0px"
                        android:minHeight="0px"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/tv_ItemSelectUserAndGroup_Email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="1"
                            android:text="Text DX-1517/2020"
                            android:textColor="@color/clGraytitle"
                            android:textSize="@dimen/text12"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/clGrayNavigator" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
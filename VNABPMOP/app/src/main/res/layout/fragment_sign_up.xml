<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/cover_a"
                    android:src="@drawable/img_vnaplanelogo"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
                <LinearLayout
                    android:layout_below="@id/cover_a"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="san-serif-light"
                        android:textSize="@dimen/text15"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:text="Nhập email doanh nghiệp đã đăng ký cho bạn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:layout_marginTop="17dp"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/icon_vna_user"
                        android:singleLine="true"
                        android:fontFamily="san-serif-light"
                        android:hint="User account"
                        android:paddingRight="13dp"
                        android:paddingLeft="13dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_Email_Company_Signup"
                        android:textSize="@dimen/textsize"
                        android:background="@drawable/border_radius_white"/>
                    <TextView
                        android:fontFamily="san-serif-light"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="@dimen/text14"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:text="Bạn chỉ có thể đăng ký sử dụng ứng dụng với doanh nghiệp đã có trong hệ thống."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnAccept"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="0.2dp"
                        android:background="@drawable/textloginstartview"
                        android:backgroundTint="#C9982A">
                        <TextView
                            android:text="Register"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingRight="30dp"
                            android:paddingLeft="30dp"
                            android:fontFamily="san-serif-light"
                            android:textColor="#fff"
                            android:background="@drawable/textloginstartview"
                            android:backgroundTint="#C9982A"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_marginTop="15dp"
                        android:fontFamily="san-serif-light"
                        android:text="Đã đăng ký ứng dụng?"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textAllCaps="false"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/customebutton"
                        android:text="Login"
                        android:id="@+id/txtLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </RelativeLayout>
            <ImageView
                android:visibility="gone"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/ImgViewlogoVNa"
                android:layout_alignParentTop="true"
                android:src="@drawable/logovnablue"
                android:layout_width="wrap_content"
                android:layout_height="80dp"/>
            <ImageButton
                android:layout_marginLeft="20dp"

                android:id="@+id/btnBack"
                android:src="@drawable/icon_back_cycle"
                android:scaleType="fitXY"
                android:background="@color/clTransparent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="45dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </FrameLayout>
    </ScrollView>
</FrameLayout>
